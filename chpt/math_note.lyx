\begin_layout Standard
\begin_inset Formula 
\[
\left[\begin{array}{c}
E_{1}/c\\
p
\end{array}\right]+\left[\begin{array}{c}
m_{2}c\\
0
\end{array}\right]=\left[\begin{array}{c}
w_{1}/c\\
k_{1}
\end{array}\right]+\left[\begin{array}{c}
w_{2}/c\\
k_{2}
\end{array}\right]
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\sqrt{p^{2}c^{2}+m_{1}^{2}c^{4}}+m_{2}c^{2} & =\sqrt{k_{1}^{2}c^{2}+m_{1}^{2}c^{4}}+\sqrt{k_{2}^{2}c^{2}+m_{2}^{2}c^{4}}\\
p & =k_{1}+k_{2}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
k_{1} & =p\frac{\left(m_{1}^{2}-m_{2}^{2}\right)\left(m_{1}^{2}c^{2}+m_{2}^{2}c^{2}-2E_{1}m_{2}\right)}{m^{4}c^{2}}\\
k_{2} & =p\frac{2m_{2}\left[m_{1}^{2}\left(E_{1}-m_{2}c^{2}\right)+m_{2}\left(m_{2}^{2}c^{2}-m_{2}E_{1}-2p^{2}\right)\right]}{m^{4}c^{2}}
\end{align*}

\end_inset

其中：
\begin_inset Formula $m^{4}c^{2}=m_{1}^{4}c^{2}+m_{2}^{4}c^{2}-2m_{1}^{2}m_{2}^{2}c^{2}-4m_{2}^{2}p^{2}$
\end_inset


\begin_inset Formula 
\[
E_{1}^{\prime}=\frac{m_{1}^{2}c^{2}+E_{1}m_{2}}{\sqrt{m_{1}^{2}c^{2}+m_{2}^{2}c^{2}+2E_{1}m_{2}}}
\]

\end_inset


