\begin_inset Formula 
\[
\int\dif k^{+}\delta\left(y-\frac{k^{+}}{p^{+}}\right)=\int\dif k^{+}\abs*{p^{+}}\delta\left(k^{+}-yp^{+}\right)
\]

\end_inset

继续化简，
\begin_inset Formula 
\begin{align*}
 & \int\dif k^{-}\frac{1}{k^{+}\left(p-k\right)^{+}{\color{blue}\left(k^{-}-\frac{\Omega_{\phi}}{k^{+}}+\frac{i\varepsilon}{k^{+}}\right)}{\color{red}\left[\left(p-k\right)^{-}-\frac{\Omega_{B}-i\varepsilon}{\left(p-k\right)^{+}}\right]}}\\
\Rightarrow & \int\dif k^{-}\frac{-1}{yp^{+}\left(1-y\right)p^{+}\left({\color{blue}k^{-}-\frac{\Omega_{\phi}}{yp^{+}}+\frac{i\varepsilon}{yp^{+}}}\right)\left[{\color{red}k^{-}-\left(p^{-}-\frac{\Omega_{B}}{\left(1-y\right)p^{+}}\right)-\frac{i\varepsilon}{\left(1-y\right)p^{+}}}\right]}\\
= & \int\dif k^{-}\frac{-1}{yp^{+}\left(1-y\right)p^{+}\left[{\color{blue}k^{-}-\left(\frac{\Omega_{\phi}}{yp^{+}}-\frac{i\varepsilon}{yp^{+}}\right)}\right]\left[{\color{red}k^{-}-\left(\frac{\left(1-y\right)M^{2}-\Omega_{B}}{\left(1-y\right)p^{+}}+\frac{i\varepsilon}{\left(1-y\right)p^{+}}\right)}\right]}
\end{align*}

\end_inset

极点分别为
\begin_inset Formula $\frac{\Omega_{\phi}}{yp^{+}},\frac{\left(1-y\right)M^{2}-\Omega_{B}}{\left(1-y\right)p^{+}}$
\end_inset

，如果
\begin_inset Formula $yp^{+}>0,\left(1-y\right)p^{+}>0$
\end_inset

，两个极点分别位于下半平面和上半平面。第一个极点的表达式更简单一些。
\end_layout

\begin_layout Standard
考虑到
\begin_inset Formula 
\[
\Omega_{\phi}=k_{\perp}^{2}+m_{\phi}^{2}\ge0,\quad\Omega_{B}=k_{\perp}^{2}+M_{B}^{2}\ge0,\quad p^{+}p^{-}=M^{2},\quad\left(p^{\perp}\right)^{2}=0
\]

\end_inset

假设
\begin_inset Formula $yp^{+}>0,\left(1-y\right)p^{+}>0$
\end_inset

，根据留数定理：
\begin_inset Formula 
\begin{align*}
 & \int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)}=\left(-2\pi i\right)\res\left[\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)}\right]_{\text{顺时针下半平面}}\\
 & =\lim_{k^{-}\to\Omega_{\phi}/\left(yp^{+}\right)}\left(-2\pi i\right)\frac{\left({\color{blue}k^{-}-\left(\frac{\Omega_{\phi}}{yp^{+}}-\frac{i\varepsilon}{yp^{+}}\right)}\right)\left(-1\right)}{yp^{+}\left(1-y\right)p^{+}\left[{\color{blue}k^{-}-\left(\frac{\Omega_{\phi}}{yp^{+}}-\frac{i\varepsilon}{yp^{+}}\right)}\right]\left[{\color{red}k^{-}-\left(\frac{\left(1-y\right)M^{2}-\Omega_{B}}{\left(1-y\right)p^{+}}+\frac{i\varepsilon}{\left(1-y\right)p^{+}}\right)}\right]}\\
 & =\left(2\pi i\right)\frac{1}{yp^{+}\left(1-y\right)p^{+}\left[{\color{red}\frac{\Omega_{\phi}}{yp^{+}}-\left(\frac{\left(1-y\right)M^{2}-\Omega_{B}}{\left(1-y\right)p^{+}}\right)}\right]}\\
 & =\left(2\pi i\right)\frac{1}{\left(1-y\right)p^{+}\Omega_{\phi}-yp^{+}\left(1-y\right)M^{2}+yp^{+}\Omega_{B}}\\
 & =\frac{\left(2\pi i\right)}{p^{+}}\frac{1}{\left(1-y\right)\left(k_{\perp}^{2}+m_{\phi}^{2}\right)-y\left(1-y\right)M^{2}+y\left(k_{\perp}^{2}+M_{B}^{2}\right)}\\
 & =\frac{\left(2\pi i\right)}{p^{+}}\frac{1}{k_{\perp}^{2}+\left(1-y\right)m_{\phi}^{2}-y\left(1-y\right)M^{2}+yM_{B}^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
remark
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & \int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)}=\int\dif k^{-}\frac{1}{{\color{blue}\left(k^{+}k^{-}-\Omega_{\phi}+i\varepsilon\right)}{\color{red}\left[\left(p-k\right)^{+}\left(p-k\right)^{-}-\Omega_{B}+i\varepsilon\right]}}\\
= & \int\dif k^{-}\frac{1}{k^{+}{\color{blue}\left(k^{-}-\frac{\Omega_{\phi}-i\varepsilon}{k^{+}}\right)}\left(p-k\right)^{+}{\color{red}\left[\left(p-k\right)^{-}-\frac{\Omega_{B}-i\varepsilon}{\left(p-k\right)^{+}}\right]}}
\end{align*}

\end_inset

研究
\begin_inset Formula $k^{-}$
\end_inset

的极点，由于极点在上下哪个半平面取决于
\begin_inset Formula $k^{-}$
\end_inset

前的系数，我们来分析以下。
\end_layout

\begin_layout Standard
对于
\begin_inset Formula $D_{\phi}\left(k\right)$
\end_inset

 or 
\begin_inset Formula $D_{\Lambda}\left(k\right)$
\end_inset

，使用 salamu 的光锥记号，
\begin_inset Formula 
\begin{align*}
k^{2}-m_{\phi}^{2} & \Rightarrow k^{+}k^{-}-\cdots\\
\left(p-k\right)-M_{B}^{2} & =k^{2}-2pk\Rightarrow k^{+}k^{-}-p^{+}k^{-}-\cdots=p^{+}k^{-}\left(y-1\right)-\cdots
\end{align*}

\end_inset

 假设
\begin_inset Formula $p^{+}>0,y>0,k^{+}>0$
\end_inset

，这两种传播子
\begin_inset Formula $k^{-}$
\end_inset

极点的位置肯定是不同的，一上一下。留数定理中，积分回路的大圆不贡献，极点分布在实轴两侧，所以根据留数定理，积分不为零。对于单个动量模方，使用 salamu
 的光锥坐标记号，把
\begin_inset Formula $1/2$
\end_inset

放到外面。
\begin_inset Formula 
\begin{align*}
 & \int\dif k^{-}\frac{1}{k^{+}{\color{blue}\left(k^{-}-\frac{\Omega_{\phi}-i\varepsilon}{k^{+}}\right)}\left(p-k\right)^{+}{\color{red}\left[\left(p-k\right)^{-}-\frac{\Omega_{B}-i\varepsilon}{\left(p-k\right)^{+}}\right]}}\\
\Rightarrow & \int\dif k^{-}\frac{1}{k^{+}\left[\left(p-k\right)^{+}\left(p-k\right)^{-}-\Omega_{B}+i\varepsilon\right]}@\left(k^{-}\to\frac{\Omega_{\phi}-i\varepsilon}{k^{+}},k^{+}\to yp^{+}\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
 & \Rightarrow\left(p-k\right)^{+}\left(p-k\right)^{-}-\Omega_{B}+i\varepsilon=M^{2}+k^{+}k^{-}-p^{+}k^{-}-k^{+}p^{-}-\Omega_{B}+i\varepsilon\\
 & =M^{2}+k^{+}\frac{\Omega_{\phi}-i\varepsilon}{k^{+}}-p^{+}\frac{\Omega_{\phi}-i\varepsilon}{yp^{+}}-yp^{+}p^{-}-\Omega_{B}=M^{2}+\left(\Omega_{\phi}-i\varepsilon\right)-\frac{\Omega_{\phi}-i\varepsilon}{y}-yM^{2}-\Omega_{B}\\
 & =M^{2}\left(1-y\right)+\frac{y-1}{y}\Omega_{\phi}-\Omega_{B}=M^{2}\overline{y}-\frac{\overline{y}}{y}\left(k_{\perp}^{2}+m_{\phi}^{2}\right)-k_{\perp}^{2}-M_{B}^{2}\\
 & =\frac{y\overline{y}^{2}M^{2}-\overline{y}^{2}k_{\perp}^{2}-\overline{y}^{2}m_{\phi}^{2}-\overline{y}yk_{\perp}^{2}-\overline{y}yM_{B}^{2}}{\overline{y}y}\\
 & =\frac{y\overline{y}^{2}M^{2}-\overline{y}^{2}k_{\perp}^{2}-\overline{y}^{2}m_{\phi}^{2}-\overline{y}yk_{\perp}^{2}-\overline{y}yM_{B}^{2}}{\overline{y}y}\\
 & =\frac{\overline{y}}{y}\frac{k_{\perp}^{2}+yM_{B}^{2}-y\overline{y}M^{2}+\overline{y}m_{\phi}^{2}}{-\overline{y}}
\end{align*}

\end_inset

加上前面的
\begin_inset Formula $k^{+}$
\end_inset

，即
\begin_inset Formula 
\[
\int\dif^{4}k\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)}=\frac{\left(-\pi i\right)}{k^{+}}\frac{y}{\overline{y}}\frac{-\overline{y}}{k_{\perp}^{2}+yM_{B}^{2}-y\overline{y}M^{2}+\overline{y}m_{\phi}^{2}}=\frac{1}{2}\int\dif k_{\perp}^{2}\frac{\left(-2\pi i\right)}{D_{\phi B}p^{+}\overline{y}}
\]

\end_inset

where,
\begin_inset Formula 
\[
D_{\phi B}=\frac{k_{\perp}^{2}+yM_{B}^{2}-y\overline{y}M^{2}+\overline{y}m_{\phi}^{2}}{-\overline{y}}
\]

\end_inset


\end_layout

\begin_layout Subsection
三个传播子
\end_layout

\begin_layout Standard
对于三个传播子的情况，
\begin_inset Formula 
\[
\int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)D_{\Lambda}\left(k\right)}
\]

\end_inset


\begin_inset Formula $1/D_{\Lambda}\left(k\right)$
\end_inset

 和 
\begin_inset Formula $1/D_{\phi}\left(k\right)$
\end_inset

 的 pole 在同一个半平面。所以使用留数定理时，还要考虑
\begin_inset Formula $1/D_{\Lambda}\left(k\right)$
\end_inset

的 pole。不过留数的形式相同，只需要替换
\begin_inset Formula $m_{\phi}^{2}\to\Lambda^{2}$
\end_inset

即可。
\end_layout

\begin_layout Standard
此外，在
\begin_inset Formula $1/D_{\phi}\left(k\right)$
\end_inset

的极点处，
\begin_inset Formula $D_{\Lambda}\left(k\right)$
\end_inset

化简为
\begin_inset Formula 
\begin{align*}
 & \left[k^{+}k^{-}-\Omega_{\Lambda}+i\varepsilon\right]@\left(k^{-}\to\frac{\Omega_{\phi}-i\varepsilon}{k^{+}},k^{+}\to yp^{+}\right)\\
 & =k^{+}\frac{\Omega_{\phi}-i\varepsilon}{k^{+}}-k_{\perp}^{2}-\Lambda^{2}+i\varepsilon=k_{\perp}^{2}+m_{\phi}^{2}-k_{\perp}^{2}-\Lambda^{2}=m_{\phi}^{2}-\Lambda^{2}
\end{align*}

\end_inset

同理，在
\begin_inset Formula $1/D_{\Lambda}\left(k\right)$
\end_inset

的极点处，
\begin_inset Formula $D_{\phi}\left(k\right)$
\end_inset

化简为
\begin_inset Formula $\Lambda^{2}-m_{\phi}^{2}$
\end_inset

。
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & \int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)D_{\Lambda}\left(k\right)}\\
 & =\left(-2\pi i\right)\left[\frac{1}{D_{\phi B}p^{+}\overline{y}\left(m_{\phi}^{2}-\Lambda^{2}\right)}+\frac{1}{D_{\Lambda B}p^{+}\overline{y}\left(\Lambda^{2}-m_{\phi}^{2}\right)}\right]=\frac{\left(-2\pi i\right)}{\left(m_{\phi}^{2}-\Lambda^{2}\right)p^{+}\overline{y}}\left(\frac{1}{D_{\phi B}}-\frac{1}{D_{\Lambda B}}\right)\\
 & =\frac{\left(-2\pi i\right)}{\left(m_{\phi}^{2}-\Lambda^{2}\right)p^{+}\overline{y}}\frac{D_{\Lambda B}-D_{\phi B}}{D_{\phi B}D_{\Lambda B}}=\frac{\left(-2\pi i\right)}{\left(m_{\phi}^{2}-\Lambda^{2}\right)p^{+}\overline{y}}\frac{m_{\phi}^{2}-\Lambda^{2}}{D_{\phi B}D_{\Lambda B}}
\end{align*}

\end_inset

i.e.
\begin_inset Formula 
\[
\int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)D_{B}\left(p-k\right)D_{\Lambda}\left(k\right)}=\frac{\left(-2\pi i\right)}{p^{+}\overline{y}}\frac{1}{D_{\phi B}D_{\Lambda B}}
\]

\end_inset

where,
\begin_inset Formula 
\[
D_{\phi B}=\frac{-k_{\perp}^{2}-yM_{B}^{2}+y\overline{y}M^{2}-\overline{y}m_{\phi}^{2}}{\overline{y}},\quad D_{\Lambda B}=\frac{-k_{\perp}^{2}-yM_{B}^{2}+y\overline{y}M^{2}-\overline{y}\Lambda^{2}}{\overline{y}}
\]

\end_inset


\end_layout

\begin_layout Standard
高幂次传播子的公式可以通过对
\begin_inset Formula $\frac{1}{D_{\phi}\left(k\right)}$
\end_inset

或者
\begin_inset Formula $\frac{1}{D_{B}\left(p-k\right)}$
\end_inset

中的
\begin_inset Formula $m_{\phi}^{2}$
\end_inset

 or 
\begin_inset Formula $M_{B}^{2}$
\end_inset

求导得到，对应的，在右边对
\begin_inset Formula $D_{\phi B}$
\end_inset

求偏导。
\begin_inset Formula 
\[
\frac{\partial}{\partial m_{\phi}^{2}}\frac{1}{D_{\phi}\left(k\right)}=\frac{1}{D_{\phi}\left(k\right)^{2}},\quad\frac{\partial}{\partial M_{B}^{2}}\frac{1}{D_{B}\left(p-k\right)}=\frac{1}{D_{B}\left(p-k\right)^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial}{\partial m_{\phi}^{2}}\frac{1}{D_{\phi B}}=\frac{1}{D_{\phi B}^{2}},\quad\frac{\partial}{\partial M_{B}^{2}}\frac{1}{D_{\phi B}}=\frac{y}{\overline{y}}\frac{1}{D_{\phi B}^{2}}
\]

\end_inset

所以
\begin_inset Formula 
\[
\int\dif k^{-}\frac{1}{D_{\phi}\left(k\right)^{2}D_{B}\left(p-k\right)D_{\Lambda}^{4}\left(k\right)}=\frac{\left(-2\pi i\right)}{p^{+}\overline{y}}\frac{1}{D_{\phi B}^{2}D_{\Lambda B}^{4}}
\]

\end_inset


\end_layout

\begin_layout Standard
包含
\begin_inset Formula $D_{B}\left(p-k\right)$
\end_inset

高次方项的会复杂一些，因为右手边
\begin_inset Formula $D_{\phi B},D_{\Lambda B}$
\end_inset

都包含
\begin_inset Formula $M_{B}^{2}$
