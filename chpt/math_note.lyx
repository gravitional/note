\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\text{Det}\left[\exp\left(\frac{i}{f}\sum_{a=1}^{8}\phi_{a}\lambda_{a}\right)\right] & =\text{Det}\left[\prod_{a=1}^{8}\exp\left(\frac{i}{f}\phi_{a}\lambda_{a}\right)\right]=\prod_{a=1}^{8}\text{Det}\left[\exp\left(\frac{i}{f}\phi_{a}\lambda_{a}\right)\right]\\
