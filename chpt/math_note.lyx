reference "eq:lk5.2.26"
plural "false"
caps "false"
noprefix "false"

\end_inset

满足条件 
\begin_inset Formula $f\left(0\right)=0$
\end_inset

。
\end_layout

\begin_layout Standard
类似地，偶函数 
\begin_inset Formula $f\left(x\right)$
\end_inset

 的傅立叶积分是傅立叶余弦积分
\begin_inset Formula 
\begin{align}
 & f\left(x\right)=\int_{0}^{\infty}A\left(\omega\right)\cos\omega x\dd{\omega},\label{eq:lk5.2.8}\\
 & A\left(\omega\right)=\frac{2}{\pi}\int_{0}^{\infty}f\left(\xi\right)\cos\omega\xi\dd{\xi}.\label{eq:lk5.2.9}
\end{align}

\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:lk5.2.8"
plural "false"
caps "false"
noprefix "false"

\end_inset

满足条件 
\begin_inset Formula $f^{\prime}(0)=0$
\end_inset

。
\end_layout

\begin_layout Standard
Mathematica 中定义的是对称形式：
\begin_inset Formula 
\begin{align*}
 & F\left(\omega\right)=\frac{1}{\sqrt{2\pi}}\int_{-\infty}^{+\infty}f\left(x\right)e^{-i\omega x}\dd{x},\\
 & f\left(x\right)=\frac{1}{\sqrt{2\pi}}\int_{-\infty}^{+\infty}F\left(\omega\right)e^{i\omega x}\dd{\omega}.
\end{align*}

\end_inset

对于奇函数，傅立叶正弦变换
\begin_inset Formula 
\begin{align*}
 & F\left(\omega\right)=\sqrt{\frac{2}{\pi}}\int_{0}^{+\infty}f\left(x\right)\sin\left(\omega x\right)\dd{x},\\
 & f\left(x\right)=\sqrt{\frac{2}{\pi}}\int_{0}^{+\infty}F\left(\omega\right)\sin\left(\omega x\right)\dd{\omega}.
\end{align*}

\end_inset

对于偶函数，傅立叶余弦变换
\begin_inset Formula 
\begin{align*}
 & F\left(\omega\right)=\sqrt{\frac{2}{\pi}}\int_{0}^{+\infty}f\left(x\right)\cos\left(\omega x\right)\dd{x},\\
 & f\left(x\right)=\sqrt{\frac{2}{\pi}}\int_{0}^{+\infty}F\left(\omega\right)\sin\left(\omega x\right)\dd{\omega}.
\end{align*}

\end_inset


\end_layout

\begin_layout Section
傅立叶变换的基本性质
\end_layout

\begin_layout Subsection
保奇偶性
\end_layout

\begin_layout Standard
如果 
\begin_inset Formula $f\left(x\right)=-f\left(-x\right)$
\end_inset

，则
\begin_inset Formula 
\begin{align*}
F\left(-\omega\right) & =\frac{1}{2\pi}\int_{-\infty}^{+\infty}f\left(x\right)e^{+i\omega x}\dd{x}\\
 & =\frac{1}{2\pi}\int_{+\infty}^{-\infty}f\left(-y\right)e^{-i\omega y}\dd{-y}\\
 & =-\frac{1}{2\pi}\int_{-\infty}^{+\infty}f\left(y\right)e^{-i\omega y}\dd{y}=-F\left(\omega\right)
\end{align*}

\end_inset

即原函数为奇函数，则像函数也是奇函数。
\end_layout

\begin_layout Example
如果
\begin_inset Formula $f(x)$
\end_inset

是
\begin_inset Formula $\left(0,\infty\right)$
\end_inset

上的函数，满足
\begin_inset Formula $f(0)=0$
\end_inset

，手动把它延拓为奇函数，则它只存在傅立叶正弦变换：
\begin_inset Formula 
\begin{align*}
 & f\left(x\right)=\int_{-\infty}^{\infty}F\left(\omega\right)\sin\left(\omega x\right)\dd{\omega}\stackrel{\text{对称性}}{=}2\int_{0}^{\infty}F\left(\omega\right)\sin\left(\omega x\right)\dd{\omega}\\
 & F\left(\omega\right)=\frac{1}{2\pi}\int_{-\infty}^{\infty}f\left(x\right)\sin\left(\omega x\right)\dd{x}\stackrel{\text{对称性}}{=}\frac{1}{\pi}\int_{0}^{\infty}f\left(x\right)\sin\left(\omega x\right)\dd{x}
\end{align*}

\end_inset

易得
\begin_inset Formula 
\begin{align*}
F^{-}\left(\omega\right)=\frac{1}{2\pi}\int_{-\infty}^{0}f\left(x\right)\sin\left(\omega x\right)\dd{x} & =\frac{1}{2\pi}\int_{0}^{-\infty}f\left(-y\right)\sin\left(-\omega y\right)\dd{(-y)}\\
 & =\frac{1}{2\pi}\int_{0}^{\infty}f\left(y\right)\sin\left(\omega y\right)\dd{y}=F^{+}\left(\omega\right)
\end{align*}

\end_inset

其中 
\begin_inset Formula $F\left(\omega\right)=F^{-}\left(\omega\right)+F^{+}\left(\omega\right)$
\end_inset

，即 
\begin_inset Formula $\left(-\infty,0\right)$
\end_inset

与 
\begin_inset Formula $\left(0,\infty\right)$
\end_inset

区间对 
\begin_inset Formula $F\left(\omega\right)$
\end_inset

 的贡献相等。
\end_layout

