\end_layout

\begin_layout Standard
将动量内积用传播子代换：
\begin_inset Formula 
\begin{align*}
 & M_{N}=\left(\overline{M}-\Delta\right)/2,\quad M_{B}=\left(\overline{M}+\Delta\right)/2,\quad M_{N}M_{B}=\left(\overline{M}^{2}-\Delta^{2}\right)/4\\
 & k^{2}=D_{\phi}+m_{\phi}^{2},
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
 & 2kp=k^{2}-\left(p-k\right)^{2}+M_{N}^{2}=D_{\phi}\left(k\right)-D_{B}\left(p-k\right)+m_{\phi}^{2}-M_{B}^{2}+M_{N}^{2}\\
 & 2kp^{\prime}=k^{2}-\left(p^{\prime}-k\right)^{2}+M_{N}^{2}=D_{\phi}\left(k\right)-D_{B}\left(p^{\prime}-k\right)+m_{\phi}^{2}-M_{B}^{2}+M_{N}^{2}\\
 & 2kq=D_{\phi}\left(k+q\right)-D_{\phi}\left(k\right)-q^{2}
\end{align*}

\end_inset

考虑到我们加入了正规子
\begin_inset Formula $D_{\Lambda}$
\end_inset

，并且
\begin_inset Formula $D_{\Lambda}$
\end_inset

一般次数比较高，所以优先与
\begin_inset Formula $D_{\Lambda}$
\end_inset

相消。
\end_layout

\begin_layout Standard
以
\begin_inset Formula $D_{\Lambda}\left(k\right),D_{\Lambda}\left(k+q\right),D_{B}\left(p-k\right)$
\end_inset

为基，
\begin_inset Formula 
\begin{align*}
 & 2kq=D_{\Lambda}\left(k+q\right)-D_{\Lambda}\left(k\right)-q^{2}\\
 & 2kp=D_{\Lambda}\left(k\right)-D_{B}\left(p-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}\\
 & 2kp^{\prime}=D_{\Lambda}\left(k+q\right)-q^{2}-D_{B}\left(p-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}
\end{align*}

\end_inset

以
\begin_inset Formula $D_{\Lambda}\left(k\right),D_{B}\left(p-k\right),D_{B}\left(p^{\prime}-k\right)$
\end_inset

为基，
\begin_inset Formula 
\begin{align*}
 & 2kq=D_{B}\left(p-k\right)-D_{B}\left(p^{\prime}-k\right)\\
 & 2kp=D_{\Lambda}\left(k\right)-D_{B}\left(p-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}\\
 & 2kp^{\prime}=D_{\Lambda}\left(k\right)-D_{B}\left(p^{\prime}-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}
\end{align*}

\end_inset

以
\begin_inset Formula $D_{\Lambda}\left(k\right),D_{\Lambda}\left(k-q\right),D_{B}\left(p^{\prime}-k\right)$
\end_inset

为基，
\begin_inset Formula 
\begin{align*}
 & 2kq=D_{\Lambda}\left(k\right)-D_{\Lambda}\left(k-q\right)+Q^{2}\\
 & 2kp^{\prime}=D_{\Lambda}\left(k\right)-D_{B}\left(p^{\prime}-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}\\
 & 2kp=D_{\Lambda}\left(k-q\right)-Q^{2}-D_{B}\left(p^{\prime}-k\right)+\Lambda^{2}-M_{B}^{2}+M_{N}^{2}
\end{align*}

\end_inset


