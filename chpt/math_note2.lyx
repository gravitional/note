\begin_layout Standard
非对称参数化
\begin_inset Formula $\left(y,\zeta\right)$
\end_inset

为，
\begin_inset Formula 
\begin{align*}
 & p=\left(\frac{Q}{\sqrt{2}\zeta},\frac{\left(1-\zeta\right)}{\sqrt{2}\zeta}Q,p_{\perp}\right),\quad p^{\prime}=\left(\frac{\left(1-\zeta\right)}{\sqrt{2}\zeta}Q,\frac{Q}{\sqrt{2}\zeta},p_{\perp}\right),\\
 & k^{+}=yp^{+}=\frac{y}{\sqrt{2}\zeta}Q,\quad\left(k+q\right)^{+}=\frac{\left(y-\zeta\right)}{\sqrt{2}\zeta}Q\\
 & \Delta=\left(-\frac{Q}{\sqrt{2}},\frac{Q}{\sqrt{2}},0\right)=\left(-\zeta p^{+},\zeta p^{+}\right)
\end{align*}

\end_inset

传播子的表达式为，
\begin_inset Formula 
\begin{align*}
\left(k+q\right)^{2}-m_{\phi}^{2}+i\varepsilon & =2k^{-}k^{+}+2\left(k^{-}q^{+}+k^{+}q^{-}\right)-k_{\perp}^{2}-Q^{2}-m_{\phi}^{2}\\
\left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon & =2k^{-}k^{+}-2\left(k^{-}p^{+}+k^{+}p^{-}-k_{\perp}p_{\perp}\right)-k_{\perp}^{2}+M_{N}^{2}-M_{B}^{2}
\end{align*}

\end_inset

总结就是，
\size small

\begin_inset Formula 
\begin{align*}
 & k^{2}-m_{\phi}^{2}+i\varepsilon=2k^{+}k^{-}-k_{\perp}^{2}-m_{\phi}^{2}=k^{-}\frac{\sqrt{2}y}{\zeta}Q+\cdots,\\
 & \left(k+q\right)^{2}-m_{\phi}^{2}+i\varepsilon=2k^{-}\left(k^{+}+q^{+}\right)+2k^{+}q^{-}-k_{\perp}^{2}-Q^{2}-m_{\phi}^{2}=k^{-}\frac{\sqrt{2}\left(y-\zeta\right)}{\zeta}Q-\cdots,\\
 & \left(k-q\right)^{2}-m_{\phi}^{2}+i\varepsilon=2k^{-}\left(k^{+}-q^{+}\right)-2k^{+}q^{-}-k_{\perp}^{2}-Q^{2}-m_{\phi}^{2}=k^{-}\frac{\sqrt{2}\left(y+\zeta\right)}{\zeta}Q-\cdots,\\
 & \left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon=2k^{-}\left(k^{+}-p^{+}\right)+2k_{\perp}p_{\perp}-k_{\perp}^{2}-2k^{+}p^{-}+M_{N}^{2}-M_{B}^{2}=k^{-}\frac{\sqrt{2}\left(y-1\right)}{\zeta}Q-\cdots,\\
 & \left(p^{\prime}-k\right)^{2}-M_{B}^{2}+i\varepsilon=2k^{-}\left(k^{+}-p^{\prime+}\right)+2k_{\perp}p_{\perp}^{\prime}-k_{\perp}^{2}-2k^{+}p^{\prime-}+M_{N}^{2}-M_{B}^{2}=k^{-}\frac{\sqrt{2}\left(y+\zeta-1\right)}{\zeta}Q-\cdots.
\end{align*}

\end_inset


