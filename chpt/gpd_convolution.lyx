\begin_layout Standard
在任意强子目标上的 Inclusive 弹性散射（截面）由张量 
\begin_inset Formula $W_{\mu\nu}\left(P,q\right)$
\end_inset

描述，
\begin_inset Formula 
\begin{align}
2MW_{\mu\nu}\left(P,q\right) & =\frac{1}{2\pi}\sum_{n}\int\frac{\dd[3]{P_{n}}}{\left(2\pi\right)^{3}2E_{n}}\mel{P}{J_{\mu}^{\dagger}\left(0\right)}{P_{n}}\mel{P_{n}}{J_{\nu}\left(0\right)}{P}\left(2\pi\right)^{4}\delta^{4}\left(P+q-P_{n}\right)\label{eq:mu1}\\
 & =\frac{1}{2\pi}\int\dd[4]{x}e^{iq\cdot x}\mel{P}{[J_{\mu}\left(x\right),J_{\nu}\left(0\right)]}{P}_{c}\label{eq:mu2}
\end{align}

\end_inset


\begin_inset Formula 
\begin{align*}
\Rightarrow & \frac{1}{2\pi}\sum_{n}\int\frac{\dd[3]{P_{n}}}{\left(2\pi\right)^{3}2E_{n}}\int\dd[4]{x}e^{i\left(P+q-P_{n}\right)\cdot x}\mel{P}{J_{\mu}^{\dagger}\left(0\right)}{P_{n}}\mel{P_{n}}{J_{\nu}\left(0\right)}{P}\\
= & \frac{1}{2\pi}\int\dd[4]{x}e^{i\left(P+q-P_{n}\right)\cdot x}\mel{P}{J_{\mu}^{\dagger}\left(0\right)J_{\nu}\left(0\right)}{P}\\
 & =\frac{1}{2\pi}\int\dd[4]{x}e^{iq\cdot x}\mel{P}{J_{\mu}\left(x\right)J_{\nu}\left(0\right)-J_{\nu}\left(0\right)J_{\mu}\left(x\right)}{P}_{c}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\phi\left(x\right)=e^{iP\cdot x}\phi\left(0\right)e^{-iP\cdot x}
\]

\end_inset

其中
\begin_inset Formula $\ket{P}$
\end_inset

是靶粒子动量本征态，质量为
\begin_inset Formula $M$
\end_inset

，动量为
\begin_inset Formula $P$
\end_inset

，
\begin_inset Formula $q$
\end_inset

是探针的四动量。对于自旋无关的电磁过程，此张量可以用两个结构函数
\begin_inset Formula $F_{1}$
\end_inset

和
\begin_inset Formula $F_{2}$
\end_inset

表示，它们依赖于散射过程的不变量，
\begin_inset Formula $\nu=P\cdot q/M$
\end_inset

 和 
\begin_inset Formula $Q^{2}=-q^{2}$
\end_inset

：
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
2MW_{\mu\nu}\left(P,q\right)=\left(-g_{\mu\nu}+\frac{q_{\mu}q_{\nu}}{q^{2}}\right)2F_{1}\left(\nu,Q^{2}\right)+\tilde{P_{\mu}}\tilde{P_{\nu}}\frac{2}{M\nu}F_{2}\left(\nu,Q^{2}\right)\label{eq:mu3}
\end{equation}

\end_inset

其中 
\begin_inset Formula $\tilde{P_{\mu}}=P_{\mu}-\left(P\cdot q/q^{2}\right)q_{\mu}$
\end_inset

 ，所以
\begin_inset Formula 
\begin{align*}
 & \tilde{P_{\mu}}q^{\mu}=0,\quad\tilde{P}^{2}=\tilde{P}\cdot P=M^{2}\left(1+\frac{\nu^{2}}{Q^{2}}\right),\\
 & \tilde{P_{\mu}}=P_{\mu}+\frac{1}{2x}q_{\mu}\\
 & \nu=\frac{P\cdot q}{M},\quad x=\frac{Q^{2}}{2M\nu}=\frac{Q^{2}}{2P\cdot q}
\end{align*}

\end_inset

即
\begin_inset Formula $\tilde{P_{\mu}}$
\end_inset

与
\begin_inset Formula $q_{\mu}$
\end_inset

垂直，
\begin_inset Formula $\nu$
\end_inset

 在强子静止系也就是 
\begin_inset Formula $E$
\end_inset

（探针能量损失）。
\end_layout

