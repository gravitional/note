\begin_layout Standard
计算出各动量在光锥坐标下的表达式，如果使用对称化参数
\begin_inset Formula $\left(x,\xi\right)$
\end_inset

，
\begin_inset Formula 
\[
0<\xi=\frac{\left(p-p\right)^{+}}{\left(p+p\right)^{+}}<1
\]

\end_inset

初末态动量的具体形式为：
\begin_inset Formula 
\begin{align*}
 & \Delta\equiv\left(\xi\left(2P^{+}\right),\frac{t+\sbf\Delta_{\perp}^{2}}{4\xi P^{+}},\sbf\Delta_{\perp}\right)\\
 & p_{1}\equiv\left(\left(1+\xi\right)P^{+},\frac{M^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1+\xi\right)P^{+}},\frac{\sbf\Delta_{\perp}}{2}\right)\\
 & k_{1}\equiv\left(\left(y+\xi\right)P^{+},k_{1}^{-},\sbf k_{\perp}+\frac{\sbf\Delta_{\perp}}{2}\right),\\
 & p_{2}\equiv\left(\left(1-\xi\right)P^{+},\frac{M^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1-\xi\right)P^{+}},-\frac{\sbf\Delta_{\perp}}{2}\right)\\
 & k_{2}\equiv\left(\left(y-\xi\right)P^{+},k_{2}^{-},\sbf k_{\perp}-\frac{\sbf\Delta_{\perp}}{2}\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
t & =\frac{-4\xi^{2}M^{2}}{1-\xi^{2}}+\frac{-\sbf\Delta_{T}^{2}}{1-\xi^{2}}\\
\sbf\Delta_{\perp}^{2} & =-4M^{2}\xi^{2}+\left(1-\xi^{2}\right)\left(-t\right)
\end{align*}

\end_inset

在GPD模型中，
\begin_inset Formula $0<k^{+}<p^{+}$
\end_inset

，也就是
\begin_inset Formula $-\xi<y<1$
\end_inset

。
\end_layout

\begin_layout Example
介子传播子
\begin_inset Formula $k$
\end_inset

：
\begin_inset Formula 
\[
k^{2}-m_{\phi}^{2}+i\varepsilon=2k^{+}k^{-}-\sbf k_{\perp}^{2}-m_{\phi}^{2}=2k^{-}\left(y+\xi\right)P^{+}-\left(\sbf k_{\perp}^{2}+m_{\phi}^{2}\right)+i\varepsilon
\]

\end_inset


\begin_inset Formula 
\[
k^{-}=\frac{\sbf k_{\perp}^{2}+m_{\phi}^{2}-i\varepsilon}{2\left(y+\xi\right)P^{+}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
介子传播子
\begin_inset Formula $k-\Delta$
\end_inset

：
\begin_inset Formula 
\begin{align*}
k-\Delta & =\left(\left(y-\xi\right)P^{+},k^{-}-\frac{t+\sbf\Delta_{\perp}^{2}}{4\xi P^{+}},\sbf k_{\perp}-\frac{\sbf\Delta_{\perp}}{2}\right)\\
\left(k-\Delta\right)^{2}-m_{\phi}^{2}+i\varepsilon & =2\left(y-\xi\right)P^{+}\left(k^{-}-\frac{t+\sbf\Delta_{\perp}^{2}}{4\xi P^{+}}\right)-\left(\sbf k_{\perp}-\frac{\sbf\Delta_{\perp}}{2}\right)^{2}-m_{\phi}^{2}\\
 & =2\left(y-\xi\right)P^{+}k^{-}-\frac{\left(y-\xi\right)}{2\xi}\left(t+\sbf\Delta_{\perp}^{2}\right)-\sbf k_{\perp}^{2}-\frac{\sbf\Delta_{\perp}^{2}}{4}+\sbf k_{\perp}\cdot\sbf\Delta_{\perp}-m_{\phi}^{2}\\
 & =2\left(y-\xi\right)P^{+}k^{-}+M^{2}\xi\left(2y-\xi\right)+\frac{t\left[\xi\left(\xi-2y\right)+1\right]}{4}-\sbf k_{\perp}^{2}+\sbf k_{\perp}\cdot\sbf\Delta_{\perp}-m_{\phi}^{2}
\end{align*}

\end_inset


\begin_inset Formula 
\[
k^{-}=\frac{\cdots-i\varepsilon}{2\left(y-\xi\right)P^{+}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
重子传播子
\begin_inset Formula $p-k$
\end_inset

：
\begin_inset Formula 
\begin{align*}
p-k & =\left(\left(1-y\right)P^{+},\frac{M_{N}^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1+\xi\right)P^{+}}-k^{-},-\sbf k_{\perp}\right)\\
\left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon & =2\left(1-y\right)P^{+}\left(\frac{M_{N}^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1+\xi\right)P^{+}}-k^{-}\right)-\sbf k_{\perp}^{2}-M_{B}^{2}\\
 & =-2\left(1-y\right)P^{+}k^{-}+\frac{\left(1-\xi\right)\left(1-y\right)\left(4M_{N}^{2}-t\right)}{4}-\sbf k_{\perp}^{2}-M_{B}^{2}
\end{align*}

\end_inset


\begin_inset Formula 
\[
k^{-}=\frac{\cdots-i\varepsilon}{2\left(y-1\right)P^{+}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
重子传播子
\begin_inset Formula $p^{\prime}-k$
\end_inset

：
\begin_inset Formula 
\begin{align*}
p^{\prime}-k & =\left(\left(1-y-2\xi\right)P^{+},\frac{M^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1-\xi\right)P^{+}}-k^{-},-\sbf k_{\perp}-\sbf\Delta_{\perp}\right)\\
\left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon & =2\left(1-y-2\xi\right)P^{+}\left(\frac{M^{2}+\sbf\Delta_{\perp}^{2}/4}{2\left(1-\xi\right)P^{+}}-k^{-}\right)-\left(\sbf k_{\perp}+\sbf\Delta_{\perp}\right)^{2}-M_{B}^{2}\\
 & =-2\left(1-y-2\xi\right)P^{+}k^{-}+\frac{\left(1+\xi\right)\left(1-y-2\xi\right)\left(4M_{N}^{2}-t\right)}{4}-\sbf k_{\perp}^{2}-\sbf\Delta_{\perp}^{2}-2\sbf k_{\perp}\cdot\sbf\Delta_{\perp}-M_{B}^{2}
\end{align*}

\end_inset


\begin_inset Formula 
\[
k^{-}=\frac{\cdots-i\varepsilon}{2\left(y+2\xi-1\right)P^{+}}
\]

\end_inset


\end_layout

