\end_layout

\begin_layout Enumerate
Nielsen 推广
\begin_inset Formula 
\begin{align*}
 & S_{n,p}\left(z\right)=\frac{\left(-1\right)^{n+p-1}}{\left(n-1\right)!p!}\int_{0}^{1}\frac{\log^{n-1}\left(t\right)\log^{p}(1-zt)}{t}\dif t\\
 & S_{n-1,1}\left(z\right)=\frac{\left(-1\right)^{n-1}}{\left(n-2\right)!}\int_{0}^{1}\frac{\log^{n-2}\left(t\right)\log(1-zt)}{t}\dif t=\mathrm{Li}_{n}\left(z\right)
\end{align*}

