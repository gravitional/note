\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & ieQ\iiiint\dif^{4}x\dif^{4}y^{\prime}\dif^{4}z\dif^{4}y\exp\left(ip^{\prime}\cdot z-ip\cdot y^{\prime}-iq\cdot x\right)\\
 & \times\delta(z-y)*\left(\sum_{n=0}^{\infty}\frac{1}{n!}\Sigma(n,0)*\left(-\partial_{y}^{2}\right)^{n}\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)\delta(y^{\prime}-y)\right)
\end{align*}

\end_inset

交换积分次序，先对
\begin_inset Formula $y^{\prime}$
\end_inset

积分,
\begin_inset Formula 
\begin{align*}
 & ieQ\iiiint\dif^{4}x\dif^{4}y^{\prime}\dif^{4}z\dif^{4}y\exp\left(ip^{\prime}\cdot z-iq\cdot x\right)\\
 & \times\delta(z-y)*\left(\sum_{n=0}^{\infty}\frac{1}{n!}\Sigma(n,0)*\left(-\partial_{y}^{2}\right)^{n}\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)\exp(-ipy^{\prime})\delta(y^{\prime}-y)\right)
\end{align*}

\end_inset

省略常数
\begin_inset Formula $ieQ$
\end_inset

以及积分符号
\begin_inset Formula $\iiiint$
\end_inset

，
\begin_inset Formula 
\begin{align*}
 & \Rightarrow\exp\left(ip^{\prime}\cdot z-iq\cdot x\right)\delta(z-y)*\left(\Sigma\left[-\partial_{y}^{2}\right]e^{-ipy}\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)\right)
\end{align*}

\end_inset

仿照上面的过程，定义
\begin_inset Formula $I^{\mu}(z,y,P)=\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)$
\end_inset


\begin_inset Formula 
\[
\Sigma\left[-\partial_{y}^{2}\right]e^{-ipy}\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)=e^{-ipy}{\color{red}\Sigma\left[-\mathcal{D}_{y}^{2}\right]\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)}
\]

\end_inset

其中
\begin_inset Formula $\mathcal{D}_{y}^{2}\equiv\left(\partial_{y}-ip\right)^{2}$
\end_inset

,同样地，
\begin_inset Formula 
\[
\mathcal{D}_{y}^{2}=\partial_{y}^{\mu}\delta(x-y)-2ip^{\mu}\delta(x-y)-p^{2}I^{\mu}(z,y,P)
\]

\end_inset

定义
\begin_inset Formula 
\[
L(\delta)\equiv\partial_{y}^{\mu}\delta(x-y)-2ip^{\mu}\delta(x-y)
\]

\end_inset

类似地，
\begin_inset Formula 
\begin{align*}
 & \Sigma\left[-\mathcal{D}_{y}^{2}\right]\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)\\
 & =\left(\int_{0}^{1}\dif t\Sigma^{\prime}\left(-\mathcal{D}_{y}^{2}t+p^{2}(1-t)\right)L(\delta)\right)+\Sigma\left(p^{2}\right)I(z,y,P)
\end{align*}

\end_inset

作用量里面的
\begin_inset Formula $\delta(z-y)$
\end_inset

会消除第二项，我们得到
\begin_inset Formula 
\[
\Sigma\left[-\mathcal{D}_{y}^{2}\right]\left(\int_{z}^{y}\delta(x-\omega)\dif\omega^{\mu}\right)=\int_{0}^{1}\dif t\Sigma^{\prime}\left(-\mathcal{D}_{y}^{2}t+p^{2}(1-t)\right)L(\delta)
\]

\end_inset


\begin_inset Formula $\mathcal{D}_{y}^{2}\equiv\left(\partial_{y}-ip\right)^{2}$
\end_inset

,代回原式得，
\begin_inset Formula 
\begin{align*}
 & \Rightarrow\exp\left(ip^{\prime}\cdot z-iq\cdot x\right)\delta(z-y)e^{-ipy}\int_{0}^{1}\dif tF^{\prime}\left(-\mathcal{D}_{y}^{2}t+p^{2}(1-t)\right)L(\delta)\\
 & \Rightarrow\exp\left(ip^{\prime}\cdot y-iq\cdot x-ip\cdot y\right)\int_{0}^{1}\dif t\Sigma^{\prime}\left(-\mathcal{D}_{y}^{2}t+p^{2}(1-t)\right)\left(\partial_{y}^{\mu}\delta(x-y)-2ip^{\mu}\delta(x-y)\right)\\
 & \Rightarrow\exp\left(ip^{\prime}\cdot y-iq\cdot x-ip\cdot y\right)\int_{0}^{1}\dif t\Sigma^{\prime}\left(-\left(-iq-ip\right){}^{2}t+p^{2}(1-t)\right)\left(-iq-2ip\right)^{\mu}\delta(x-y)\\
 & \Rightarrow-i\exp\left(ip^{\prime}\cdot y-iq\cdot y-ip\cdot y\right)\int_{0}^{1}\dif t\Sigma^{\prime}\left(\left(q+p\right)^{2}t+p^{2}(1-t)\right)\left(q+2p\right)^{\mu}\\
 & \Rightarrow-i\exp\left(ip^{\prime}\cdot y-iq\cdot y-ip\cdot y\right)\int_{0}^{1}\dif t\Sigma^{\prime}\left(\left(q+p\right)^{2}t+p^{2}(1-t)\right)\left(q+2p\right)^{\mu}\\
 & \Rightarrow-i\left(2\pi\right)^{4}\delta\left(p^{\prime}-q-p\right)\frac{\Sigma(q+p)-\Sigma(p)}{2p\cdot q+q^{2}}\left(q+2p\right)^{\mu}
\end{align*}

\end_inset

代回常数
\begin_inset Formula $ieQ$
\end_inset

得到，
\begin_inset Formula 
\[
2\pi\delta\left(p^{\prime}-q-p\right)eQ\frac{\left(q+2p\right)^{\mu}}{2p\cdot q+q^{2}}\left(\Sigma(q+p)-\Sigma(p)\right)
\]

\end_inset

即得到了动量空间的费曼规则，对于确定动量的反应过程的振幅。
\end_layout

\begin_layout Section
积分的矩阵形式
\end_layout

\begin_layout Standard
写成矩阵的形式，处理起来更统一，下面的约定可能会有一些负号的差别，不过问题不大。令
\begin_inset Formula 
\[
I\left(x,y,P\right)=\int_{x}^{y}\dif w_{\mu}A^{\mu}\left(w\right)
\]

\end_inset

其中
\begin_inset Formula $x,y$
\end_inset

为路径的端点。根据路径依赖无关的约定有
\begin_inset Formula 
\begin{align*}
\partial_{y,\mu}I\left(x,y,P\right) & =A_{\mu}\left(y\right)\\
\partial_{x,\mu}I\left(x,y,P\right) & =-A_{\mu}\left(x\right)
\end{align*}

\end_inset

末端点对应
\begin_inset Formula $+$
\end_inset

，出发点对应
\begin_inset Formula $-$
\end_inset

，下面以
\begin_inset Formula $\partial_{y,\mu}I\left(x,y,P\right)=A_{\mu}\left(y\right)$
\end_inset

为例，把
\begin_inset Formula $I\left(x,y,P\right)$
\end_inset

简记成
\begin_inset Formula $I_{y}$
\end_inset

。
\end_layout

\begin_layout Standard
在我们用的作用量中，会有形如
\begin_inset Formula 
\[
\int\dif x\int\dif yR\left(x\right)F\left(x-y\right)I\left(x,y,P\right)T\left(y\right)
\]

\end_inset

的项，也可以通过平移积分变量，改写成
\begin_inset Formula 
\[
\int\dif x\int\dif aR\left(x\right)F\left(a\right)I\left(x,x+a,P\right)T\left(x+a\right)
\]

\end_inset

首先假设
\begin_inset Formula $F\left(x-y\right)$
\end_inset

只依赖于
\begin_inset Formula $\left(x-y\right)^{2}$
\end_inset

，等价地在动量空间，只依赖于某个动量
\begin_inset Formula $k^{2}$
\end_inset

。经过傅里叶变换，
\begin_inset Formula $F\left(x-y\right)$
\end_inset

可以写成
\begin_inset Formula 
\[
\int\dif x\int\dif yR\left(x\right)\delta\left(x-y\right)\tilde{F}\left(-\partial_{y}^{2}\right)I\left(x,y,P\right)T\left(y\right)
\]

\end_inset


\begin_inset Formula 
\[
\tilde{F}\left(-\partial_{y}^{2}\right)=\sum_{n=0}^{\infty}\frac{\tilde{F}^{\left(n\right)}\left(-\partial_{y}^{2}\right)^{n}}{n!}
\]

\end_inset


\begin_inset Formula $\tilde{F}$
\end_inset

是
\begin_inset Formula $F\left(x-y\right)$
\end_inset

的傅里叶变换，
\begin_inset Formula $\tilde{F}^{\left(n\right)}$
\end_inset

是
\begin_inset Formula $\tilde{F}$
\end_inset

泰勒级数的第
\begin_inset Formula $n$
\end_inset

项系数。
\begin_inset Formula $\tilde{F}\left(-\partial_{y}^{2}\right)$
\end_inset

的意思是，把傅里叶变换
\begin_inset Formula $\tilde{F}\left(k^{2}\right)$
\end_inset

的变量替换成微分算子
\begin_inset Formula $\tilde{F}\left(k^{2}\right)\to\tilde{F}\left(-\partial_{y}^{2}\right)$
\end_inset

。它相当于作用在后面函数上的一个泛函。
\end_layout

\begin_layout Standard
\begin_inset Formula $\delta\left(x-y\right)$
\end_inset

的来自于傅里叶逆变换，它的出现是必须的。我们考虑
\begin_inset Formula $I\left(y,x,P\right)=1$
\end_inset

的情况，
\begin_inset Formula 
\begin{align*}
 & \int\dif x\int\dif yR\left(x\right)F\left(x-y\right)T\left(y\right)\\
\Rightarrow & \int\dif x\int\dif yR\left(x\right)\delta\left(x-y\right)\tilde{F}\left(-\partial_{y}^{2}\right)T\left(y\right)
\end{align*}

\end_inset

如果没有
\begin_inset Formula $\delta\left(x-y\right)$
\end_inset

，第二项变成对
\begin_inset Formula $x,y$
\end_inset

的单独积分，将不会有相互作用。
\end_layout

\begin_layout Subsection
一般形式
\end_layout

\begin_layout Standard
作 Wick 收缩时，假设 
\begin_inset Formula $T\left(y\right)$
\end_inset

点产生的指数因子是
\begin_inset Formula $\exp\left(-iky\right)$
\end_inset

，即
\begin_inset Formula $T\left(y\right)$
\end_inset

粒子进入
\begin_inset Formula $y$
\end_inset

点，下列讨论可以无障碍地推广到
\begin_inset Formula $\exp\left(+iky\right)$
\end_inset

的情形，唯一的变化是动量反号。也就是说，我们需要处理的对象是
\begin_inset Formula 
\begin{align*}
 & \int\dif x\int\dif yR\left(y\right)\delta\left(x-y\right)\tilde{F}\left(-\partial_{y}^{2}\right)I\left(x,y,P\right)e^{-iky}\\
= & \int\dif x\int\dif yR\left(y\right)\delta\left(x-y\right)\tilde{F}\left(-\partial_{y}^{2}\right)e^{-iky}I\left(x,y,P\right)
\end{align*}

\end_inset

先考虑
\begin_inset Formula $\partial_{y}$
\end_inset

的作用
\begin_inset Formula 
\begin{align*}
\partial_{y}^{\mu}e^{-iky}I\left(x,y,P\right) & =e^{-iky}\left(\partial_{y}^{\mu}-ik^{\mu}\right)I\left(x,y,P\right)\equiv e^{-iky}D_{y}^{\mu}I\left(x,y,P\right)\\
\partial_{y}^{2}e^{-ipy}I\left(x,y,P\right)= & e^{-iky}\left(\partial_{y}-ik\right)^{2}I\left(x,y,P\right)\equiv e^{-iky}D_{y}^{2}I\left(x,y,P\right)
\end{align*}

\end_inset

其中我们定义了
\begin_inset Formula $D_{y}^{\mu}=\partial_{y}^{\mu}-ik^{\mu}$
\end_inset

。
\end_layout

\begin_layout Subsection
单光子情形
\end_layout

\begin_layout Standard
单光子情形，即考虑规范链接展开的第一阶，只有一个
\begin_inset Formula $I_{y}$
\end_inset

时，
\begin_inset Formula 
\begin{align*}
D_{\mu,y}I_{y} & =\left(\partial_{\mu,y}-ik_{\mu}\right)I_{y}=A_{\mu}\left(y\right)-ik_{\mu}I_{y}
\end{align*}

\end_inset

路径积分为
\begin_inset Formula $I\left(x,y,P\right)=\int_{x}^{y}\dif w_{\mu}A^{\mu}\left(w\right)$
\end_inset

，
\begin_inset Formula $y$
\end_inset

是路径终点，对应
\begin_inset Formula $+A_{\mu}\left(y\right)$
\end_inset

，如果是初始点，对应
\begin_inset Formula $-A_{\mu}\left(x\right)$
\end_inset

，下面以
\begin_inset Formula $+A_{\mu}\left(y\right)$
\end_inset

为例。
\begin_inset Formula 
\begin{align*}
D_{y}^{2}=D_{y}^{\phantom{x}\mu}D_{y,\mu}I_{y} & =D_{y}^{\phantom{x}\mu}\left(A_{\mu}\left(y\right)-ik_{\mu}I_{y}\right)=\left(\partial_{y}^{\phantom{x}\mu}-ik^{\mu}\right)\left(A_{\mu}\left(y\right)-ik_{\mu}I_{y}\right)\\
 & =\partial\cdot A-ik\cdot A-ik\cdot A-k^{2}I_{y}\\
 & =\partial\cdot A-2ik\cdot A-k^{2}I_{y}
\end{align*}

\end_inset

所以得到
\begin_inset Formula 
\begin{align*}
D_{y}^{2}I_{y} & =L\left(A\left(y\right)\right)-k^{2}I_{y}\\
L\left(A\right)= & \partial_{y}\cdot A-2ik\cdot A\left(y\right)
\end{align*}

\end_inset


\begin_inset Formula $L\left(A\right)$
\end_inset

是
\begin_inset Formula $A$
\end_inset

的函数，但不包含
\begin_inset Formula $I_{y}$
\end_inset

。
\end_layout

\begin_layout Standard
当
\begin_inset Formula $D_{y}^{2}$
\end_inset

不停地作用到
\begin_inset Formula $I_{y}$
\end_inset

上面的时候，
\begin_inset Formula $I_{y}$
\end_inset

的幂次并不会升高，也就是说这个函数空间只有
\begin_inset Formula $I_{y}^{0}=1,I_{y}^{1}$
\end_inset

组成。当然，
\begin_inset Formula $D_{y}^{2}$
\end_inset

也可以作用到
\begin_inset Formula $L\left(A\right)$
\end_inset

上，所以我们考虑
\begin_inset Formula 
\begin{align*}
D_{y}^{2}L\left(A\right) & =D_{y}^{2}L\left(A\right)+0*I_{y}\\
D_{y}^{2}I_{y} & =L\left(A\right)-k^{2}*I_{y}
\end{align*}

\end_inset

所以
\begin_inset Formula $D_{y}^{2}$
\end_inset

在
\begin_inset Formula $\left\{ 1,I_{y}\right\} $
\end_inset

下的矩阵形式是：第一列
\begin_inset Formula $1$
\end_inset

的系数是
\begin_inset Formula $\left(D_{y}^{2},0\right)$
\end_inset

，第二列
\begin_inset Formula $I_{y}$
\end_inset

的系数是
\begin_inset Formula $\left(L\left(A\right),-k^{2}\right)$
\end_inset


\begin_inset Formula 
\begin{align*}
D_{y}^{2} & =\left[\begin{array}{cc}
D_{y}^{2} & L\left(A\right)\\
0 & -k^{2}
\end{array}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
可以先验证一下，矩阵平方为
\begin_inset Formula 
\[
\left(D_{y}^{2}\right)^{2}=\left[\begin{array}{cc}
D_{y}^{2} & L\left(A\right)\\
0 & -k^{2}
\end{array}\right].\left[\begin{array}{cc}
D_{y}^{2} & L\left(A\right)\\
0 & -k^{2}
\end{array}\right]=\left[\begin{array}{cc}
\left(D_{y}^{2}\right)^{2} & \left(D_{y}^{2}-k^{2}\right)L\left(A\right)\\
0 & \left(-k^{2}\right)^{2}
\end{array}\right]
\]

\end_inset


\begin_inset Formula $\left(D_{y}^{2}-k^{2}\right)L\left(A\right)$
\end_inset

应该理解为，
\begin_inset Formula $\left(D_{y}^{2}-k^{2}\right)$
\end_inset

作用在
\begin_inset Formula $L\left(A\right)$
\end_inset

上面。我们得到
\begin_inset Formula 
\[
\left(D_{y}^{2}\right)^{2}I_{y}=\left(D_{y}^{2}\right)^{2}\left[\begin{array}{c}
1\\
0
\end{array}\right]=\left(D_{y}^{2}-k^{2}\right)L\left(A\right)+\left(-k^{2}\right)^{2}I_{y}
\]

\end_inset

直接计算
\begin_inset Formula $\left(D_{y}^{2}\right)^{2}I_{y}$
\end_inset

，
\begin_inset Formula 
\begin{align*}
\left(D_{y}^{2}\right)^{2}I_{y} & =D_{y}^{2}\left(L\left(A\right)-k^{2}I_{y}\right)=D_{y}^{2}L\left(A\right)-k^{2}\left(L\left(A\right)-k^{2}I_{y}\right)\\
 & =\left(D_{y}^{2}-k^{2}\right)L\left(A\right)+\left(-k^{2}\right)^{2}I_{y}
\end{align*}

\end_inset

结果是相同的。
\end_layout

\begin_layout Standard
一般的，对形如
\begin_inset Formula $m=\left[\begin{array}{cc}
a & b\\
0 & c
\end{array}\right]$
\end_inset

的矩阵求幂，
\begin_inset Formula 
\[
m^{n}=\left[\begin{array}{cc}
a^{n} & \frac{a^{n}-c^{n}}{a-c}b\\
0 & c^{n}
\end{array}\right]
\]

\end_inset

所以有
\begin_inset Formula 
\begin{align*}
\left(D_{y}^{2}\right)^{n} & =\left[\begin{array}{cc}
\left(D_{y}^{2}\right)^{n} & \frac{\left(D_{y}^{2}\right)^{n}-\left(-k^{2}\right)^{n}}{D_{y}^{2}+k^{2}}L\left(A\right)\\
0 & \left(-k^{2}\right)^{n}
\end{array}\right]
\end{align*}

\end_inset


\begin_inset Formula 
\[
\left(D_{y}^{2}\right)^{n}I_{y}=\frac{\left(D_{y}^{2}\right)^{n}-\left(-k^{2}\right)^{n}}{D_{y}^{2}+k^{2}}L\left(A\right)+\left(-k^{2}\right)^{n}I_{y}
\]

\end_inset

其中式子右边的
\begin_inset Formula $D_{y}^{2n}$
\end_inset

应该理解成作用在
\begin_inset Formula $L\left(A\right)$
\end_inset

上面。代入
\begin_inset Formula $L\left(A\right)=\partial_{y}\cdot A-2ik\cdot A\left(y\right)$
\end_inset

，则
\begin_inset Formula 
\[
\left(D_{y}^{2}\right)^{n}I_{y}=\frac{\left(D_{y}^{2}\right)^{n}-\left(-k^{2}\right)^{n}}{D_{y}^{2}+k^{2}}\left(\partial_{y}\cdot A-2ik\cdot A\left(y\right)\right)+\left(-k^{2}\right)^{n}I_{y}
\]

\end_inset

我们用的拉氏量中包含一项
\begin_inset Formula $\delta\left(x-y\right)$
\end_inset

，后一项
\begin_inset Formula $\left(-k^{2}\right)^{n}I_{y}$
\end_inset

不贡献，由于积分路径收缩成一个点。前一项中，
\begin_inset Formula $A_{\mu}$
\end_inset

场总是有傅里叶分量，正能解
\begin_inset Formula $-iqy$
\end_inset

，或者负能解
\begin_inset Formula $+iqy$
\end_inset

。我们假设光子进入顶点
\begin_inset Formula $y$
\end_inset

，对应
\begin_inset Formula $\exp\left(-iqy\right)$
\end_inset

，
\begin_inset Formula $\partial\cdot A=-iq^{\mu}A_{\mu}$
\end_inset

，而前置的
\begin_inset Formula $D_{y}^{2}=\left(\partial_{y,\mu}-ik_{\mu}\right)\left(\partial_{y}^{\mu}-ik^{\mu}\right)\Rightarrow\left(-ik-iq\right)^{2}=-\left(k+q\right)^{2}$
\end_inset

，
\begin_inset Formula 
\begin{align*}
\frac{\left(D_{y}^{2}\right)^{n}-\left(-k^{2}\right)^{n}}{D_{y}^{2}+k^{2}}\left(\partial\cdot A-2ik\cdot A\right) & \Rightarrow\frac{\left(-1\right)^{n}\left[\left(k+q\right)^{2n}-\left(k^{2}\right)^{n}\right]}{\left[-\left(k+q\right)^{2}+k^{2}\right]}\left(-2ik^{\mu}-iq^{\mu}\right)A_{\mu}\left(y\right)\\
 & =\left(-1\right)^{n}\frac{\left[\left(k+q\right)^{2n}-k^{2n}\right]}{\left[\left(k+q\right)^{2}-k^{2}\right]}i\left(2k^{\mu}+q^{\mu}\right)A_{\mu}\left(y\right)
\end{align*}

\end_inset

所以
\begin_inset Formula 
\begin{align*}
\tilde{F}\left(-\partial_{y}^{2}\right)e^{-iky}I\left(x,y,P\right) & =e^{-iky}\sum_{n=0}^{\infty}\frac{\tilde{F}^{\left(n\right)}\left(0\right)}{n!}\left(-\mathcal{D}_{y}^{2}\right)^{n}I\left(x,y,P\right)\\
 & =e^{-iky}\sum_{n=0}^{\infty}\frac{\tilde{F}^{\left(n\right)}\left(0\right)}{n!}\frac{\left[\left(k+q\right)^{2n}-k^{2n}\right]}{\left[\left(k+q\right)^{2}-k^{2}\right]}i\left(2k^{\mu}+q^{\mu}\right)A_{\mu}\left(y\right)\\
 & =e^{-iky}\frac{\left(\tilde{F}\left[k+q\right]-\tilde{F}\left[k\right]\right)}{\left[\left(k+q\right)^{2}-k^{2}\right]}i\left(2k^{\mu}+q^{\mu}\right)A_{\mu}\left(y\right)
\end{align*}

\end_inset

其中
\begin_inset Formula $I\left(x,y,P\right)=\int_{x}^{y}\dif w_{\mu}A^{\mu}\left(w\right)$
\end_inset

，光子
\begin_inset Formula $A_{\mu}$
\end_inset

进入
\begin_inset Formula $y$
\end_inset

。
\end_layout

\begin_layout Subsection
双光子情形
\end_layout

\begin_layout Standard
现在考虑双光子
\begin_inset Formula 
\[
D_{x,\mu}I_{x}I_{x}=\left(\partial_{x,\mu}-ip_{\mu}\right)I_{x}I_{x}=2I_{x}A_{\mu}\left(x\right)-ip_{\mu}I_{x}I_{x}=I_{x}\left(2A_{\mu}\left(x\right)-ip_{\mu}I_{x}\right)
\]

\end_inset


\begin_inset Formula 
\begin{align*}
 & D_{x}^{\phantom{x}\mu}D_{x,\mu}I_{x}I_{x}=D_{x}^{\phantom{x}\mu}\left(I_{x}\left(2A_{\mu}\left(x\right)-ip_{\mu}I_{x}\right)\right)\\
\Rightarrow & {\color{blue}\left(D_{x}^{\phantom{x}\mu}I_{x}\right)\left(2A_{\mu}\left(x\right)-ip_{\mu}I_{x}\right)}+{\color{brown}I_{x}\partial_{x}^{\phantom{x}\mu}\left(2A_{\mu}\left(x\right)-ip_{\mu}I_{x}\right)}\\
\Rightarrow & {\color{blue}\left(A_{\mu}\left(x\right)-ip^{\mu}I_{x}\right)\left(2A_{\mu}\left(x\right)-ip_{\mu}I_{x}\right)}+{\color{brown}I_{x}\left(2\partial\cdot A-ip\cdot A\right)}\\
\Rightarrow & 2A^{2}-3ip\cdot AI_{x}-p^{2}I_{x}^{2}+2I_{x}\partial\cdot A-ip\cdot AI_{x}\\
\Rightarrow & 2A^{2}-p^{2}I_{x}^{2}+2I_{x}\partial\cdot A-4I_{x}ip\cdot A\\
= & 2A^{2}+2L\left(A\right)I_{x}-p^{2}I_{x}^{2}
\end{align*}

\end_inset

总结一下，
\begin_inset Formula 
\begin{align*}
