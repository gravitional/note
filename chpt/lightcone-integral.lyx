\begin_layout Standard
计算出各动量在光锥坐标下的表达式，如果使用对称化参数
\begin_inset Formula $\left(x,\xi\right)$
\end_inset

，
\begin_inset Formula 
\[
0<\xi=\frac{\left(p-p\right)^{+}}{\left(p+p\right)^{+}}<1
\]

\end_inset

介子动量
\begin_inset Formula $k^{+}$
\end_inset

为
\begin_inset Formula 
\[
k^{+}=\left(y+\xi\right)P^{+}=\frac{y+\xi}{2\sqrt{2}\xi}Q,\quad\left(k+q\right)^{+}=\left(y-\xi\right)P^{+}=\frac{y-\xi}{2\sqrt{2}\xi}Q.
\]

\end_inset

初末态核子动量为，
\begin_inset Formula 
\begin{align*}
 & p=\left(\frac{\left(1+\xi\right)}{2\sqrt{2}\xi}Q,\frac{\left(1-\xi\right)}{2\sqrt{2}\xi}Q,p_{\perp}\right),\quad p^{\prime}=\left(\frac{\left(1-\xi\right)}{2\sqrt{2}\xi}Q,\frac{\left(1+\xi\right)}{2\sqrt{2}\xi}Q,p_{\perp}\right),\\
 & P^{+}=\frac{Q}{2\sqrt{2}\xi},\quad p_{\perp}^{2}=\frac{1-\xi^{2}}{4\xi^{2}}Q^{2}-M_{N}^{2}\\
 & \Delta=\left(-\frac{Q}{\sqrt{2}},\frac{Q}{\sqrt{2}},0\right).
\end{align*}

\end_inset

在GPD模型中，
\begin_inset Formula $0<k^{+}<p^{+}$
\end_inset

，也就是
\begin_inset Formula $-\xi<y<1$
\end_inset

。
\end_layout

\begin_layout Standard
传播子的表达式为，
\begin_inset Formula 
\begin{align*}
\left(k+q\right)^{2}-m_{\phi}^{2}+i\varepsilon & =2k^{-}k^{+}+2\left(k^{-}q^{+}+k^{+}q^{-}\right)-k_{\perp}^{2}-Q^{2}-m_{\phi}^{2}\\
\left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon & =2k^{-}k^{+}-2\left(k^{-}p^{+}+k^{+}p^{-}-k_{\perp}p_{\perp}\right)-k_{\perp}^{2}+M_{N}^{2}-M_{B}^{2}
\end{align*}

\end_inset

总结就是，
\size small

\begin_inset Formula 
\begin{align*}
 & k^{2}-m_{\phi}^{2}+i\varepsilon=2k^{+}k^{-}-k_{\perp}^{2}-m_{\phi}^{2}=k^{-}\left(\frac{y+\xi}{\sqrt{2}\xi}\right)Q+\cdots\\
 & \left(k+q\right)^{2}-m_{\phi}^{2}+i\varepsilon=2k^{-}\left(k^{+}+q^{+}\right)+2k^{+}q^{-}-k_{\perp}^{2}-Q^{2}-m_{\phi}^{2}=k^{-}\left(\frac{y-\xi}{\sqrt{2}\xi}\right)Q-\cdots\\
 & \left(p-k\right)^{2}-M_{B}^{2}+i\varepsilon=2k^{-}\left(k^{+}-p^{+}\right)+2k_{\perp}p_{\perp}-k_{\perp}^{2}-2k^{+}p^{-}+M_{N}^{2}-M_{B}^{2}=k^{-}\left(\frac{y-1}{\sqrt{2}\xi}\right)Q-\cdots\\
 & \left(p^{\prime}-k\right)^{2}-M_{B}^{2}+i\varepsilon=2k^{-}\left(k^{+}-p^{\prime+}\right)+2k_{\perp}p_{\perp}^{\prime}-k_{\perp}^{2}-2k^{+}p^{\prime-}+M_{N}^{2}-M_{B}^{2}=k^{-}\left(\frac{y+2\xi-1}{\sqrt{2}\xi}\right)Q-\cdots
\end{align*}

\end_inset


