\begin_layout Standard
原先的
\begin_inset Formula $\gamma$
\end_inset

矩阵是
\begin_inset Formula $\gamma^{0},\gamma^{1},\gamma^{2},\gamma^{3}$
\end_inset

，
\begin_inset Formula $\gamma^{\mu}\gamma_{\mu}=\gamma^{0}\gamma^{0}-\gamma^{i}\gamma^{i}$
\end_inset

，所以
\begin_inset Formula $\gamma^{0}\gamma^{0}=1$
\end_inset

，
\begin_inset Formula $\gamma^{i}\gamma^{i}=-1$
\end_inset

。
\begin_inset Formula 
\begin{align*}
 & \gamma^{+}=\frac{1}{\sqrt{2}}\left(\gamma^{0}+\gamma^{3}\right),\quad\gamma^{-}=\frac{1}{\sqrt{2}}\left(\gamma^{0}-\gamma^{3}\right)\\
 & \gamma^{+}\gamma^{+}=\frac{1}{2}\left[\left(\gamma^{0}\right)^{2}+\left(\gamma^{3}\right)^{2}+\gamma^{0}\gamma^{3}+\gamma^{3}\gamma^{0}\right]=0\\
 & \gamma^{-}\gamma^{-}=\frac{1}{2}\left[\left(\gamma^{0}\right)^{2}+\left(\gamma^{3}\right)^{2}-\gamma^{0}\gamma^{3}-\gamma^{3}\gamma^{0}\right]=0\\
 & \left\{ \gamma^{+},\gamma^{-}\right\} =\frac{1}{2}2\left[\left(\gamma^{0}\right)^{2}-\left(\gamma^{3}\right)^{2}\right]=2
\end{align*}

\end_inset

原先的 Clifford 代数
\begin_inset Formula $\left\{ \gamma^{\mu},\gamma^{\nu}\right\} =2g^{\mu\nu}$
\end_inset

变成了
\begin_inset Formula 
\begin{align*}
 & \left\{ \gamma^{+},\gamma^{-}\right\} =2,\quad\left\{ \gamma^{+},\gamma^{+}\right\} =0,\quad\left\{ \gamma^{-},\gamma^{-}\right\} =0,\\
 & \left\{ \gamma^{+,-},\gamma^{1,2}\right\} =0,\\
 & \left\{ \gamma^{1,2},\gamma^{1,2}\right\} =-2.
\end{align*}

\end_inset

与动量的洛伦兹不变内积，
\begin_inset Formula 
\[
\gamma^{\mu}p_{\mu}=\gamma^{0}p^{0}-\sbf{\gamma}\sbf{p}=\gamma^{+}p^{-}+\gamma^{-}p^{+}-\gamma^{\perp}p^{\perp}
\]

\end_inset

从而有，
\begin_inset Formula 
\begin{align*}
 & \gamma^{+}\sla{p}=-\sla{p}\gamma^{+}+2p^{+}\\
 & \tr\left[\gamma^{+}\sla{p}\right]=\tr\left[\sla{p}\gamma^{+}\right]=4p^{+}\\
 & \tr\left[\gamma^{-}\sla{p}\right]=\tr\left[\sla{p}\gamma^{-}\right]=4p^{-}
\end{align*}

\end_inset

跟通常的公式一致
\begin_inset Formula $\gamma^{\mu}\sla{p}=-\sla{p}\gamma^{\mu}+2p^{\mu}$
\end_inset

。计算一下后面会用到的表达式
\begin_inset Formula 
\[
\tr\left[\gamma^{+}\left(\gamma p_{1}+m\right)\gamma^{+}\left(\gamma p_{2}+m\right)\right]=\tr\left[\gamma^{+}\gamma p_{1}\gamma^{+}\gamma p_{2}\right]=8p_{1}^{+}p_{2}^{+}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
 & \tr\left[\left(p_{2}+p_{1}\right)^{+}\left(\gamma p_{1}+m\right)\gamma^{+}\left(\gamma p_{2}+m\right)\right]\\
 & =m\left(p_{2}+p_{1}\right)^{+}\tr\left[\gamma p_{1}\gamma^{+}+\gamma^{+}\gamma p_{2}\right]\\
 & =m\left(p_{2}+p_{1}\right)^{+}\tr\left[\gamma^{+}\gamma\left(p_{1}+p_{2}\right)\right]\\
 & =4m\left(p_{2}+p_{1}\right)^{+}\left(p_{2}+p_{1}\right)^{+}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
振幅的参数化为，
\begin_inset Formula 
\[
\Gamma^{\mu}=\gamma^{\mu}F_{1}\left(Q^{2}\right)+\frac{i\sigma^{\mu\nu}q_{\nu}}{2m}F_{2}\left(Q^{2}\right)
\]

\end_inset

利用Gordon公式化简成，
\begin_inset Formula 
\[
\Gamma^{\mu}=\gamma^{\mu}\left[F_{1}\left(Q^{2}\right)+F_{2}\left(Q^{2}\right)\right]-\frac{\left(p_{2}+p_{1}\right)^{\mu}}{2m}F_{2}\left(Q^{2}\right)
\]

\end_inset


\begin_inset Formula $\xi>0$
\end_inset

时动量的表达式为，
\begin_inset Formula 
\begin{align*}
 & p=\left(\frac{\left(1+\xi\right)}{2\xi}Q,\frac{\left(1-\xi\right)}{2\xi}Q,p_{\perp}\right),\\
 & p^{\prime}=\left(\frac{\left(1-\xi\right)}{2\xi}Q,\frac{\left(1+\xi\right)}{2\xi}Q,p_{\perp}\right),\quad\Delta=\left(-Q,Q,0\right)\\
 & p^{\prime+}p^{+}=\frac{1-\xi^{2}}{4\xi^{2}}Q^{2},\quad P^{+}=\frac{Q}{2\xi}\\
 & p_{\perp}^{2}=\frac{1-\xi^{2}}{2\xi^{2}}Q^{2}-M_{N}^{2}
\end{align*}

\end_inset

构造第一个表达式，
\begin_inset Formula 
\begin{align*}
A & =\sum_{\text{spin}}\bar{u}\left(p_{2}\right)\Gamma^{+}u\left(p_{1}\right)\bar{u}\left(p_{1}\right)\gamma^{+}u\left(p_{2}\right)=\tr\left[\Gamma^{+}\left(\gamma p_{1}+m\right)\gamma^{+}\left(\gamma p_{2}+m\right)\right]\\
 & =\tr\left[\left(F_{1}+F_{2}\right)\gamma^{+}\left(\gamma p_{1}+m\right)\gamma^{+}\left(\gamma p_{2}+m\right)-\frac{F_{2}}{2m}\left(p_{2}+p_{1}\right)^{+}\left(\gamma p_{1}+m\right)\gamma^{+}\left(\gamma p_{2}+m\right)\right]\\
 & =\left(F_{1}+F_{2}\right)8p_{1}^{+}p_{2}^{+}-2F_{2}\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\\
 & =\left(F_{1}+F_{2}\right)2\frac{1-\xi^{2}}{\xi^{2}}Q^{2}-2F_{2}\frac{Q^{2}}{\xi^{2}}\\
 & =F_{1}2\frac{1-\xi^{2}}{\xi^{2}}Q^{2}-F_{2}2Q^{2}
\end{align*}

\end_inset

构造第二个表达式，
\begin_inset Formula 
\begin{align*}
B & =\sum_{\text{spin}}\bar{u}\left(p_{2}\right)\Gamma^{+}u\left(p_{1}\right)\bar{u}\left(p_{1}\right)\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}u\left(p_{2}\right)=\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}\left\{ \tr\left[\Gamma^{+}\left(\gamma p_{1}+m\right)\left(\gamma p_{2}+m\right)\right]\right\} \\
 & =\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}\left\{ \left(F_{1}+F_{2}\right)\tr\left[\gamma^{+}\left(\gamma p_{1}+m\right)\left(\gamma p_{2}+m\right)\right]-\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}F_{2}\tr\left[\left(\gamma p_{1}+m\right)\left(\gamma p_{2}+m\right)\right]\right\} \\
 & =\frac{\left(p_{2}+p_{1}\right)^{+}}{2}\left(F_{1}+F_{2}\right)\tr\left[\gamma^{+}\gamma\left(p_{1}+p_{2}\right)\right]-\left[\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}\right]^{2}F_{2}\tr\left[p_{1}\cdot p_{2}+m^{2}\right]\\
 & =2\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\left(F_{1}+F_{2}\right)-\left(p_{2}^{+}+p_{1}^{+}\right)^{2}F_{2}\left(\frac{Q^{2}}{2m^{2}}+2\right)\\
 & =\frac{Q^{2}}{\xi^{2}}\left[2\left(F_{1}+F_{2}\right)-F_{2}\left(\frac{Q^{2}}{2m^{2}}+2\right)\right]\\
 & =\frac{Q^{2}}{\xi^{2}}\left[2F_{1}-F_{2}\frac{Q^{2}}{2m^{2}}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
如果不代入参数化的具体形式，
\begin_inset Formula 
\begin{align*}
A & =\tr\left[\Gamma^{+}\left(\sla{p}_{1}+M_{N}\right)\gamma^{+}\left(\sla{p}_{2}+M_{N}\right)\right]=\left(F_{1}+F_{2}\right)8p_{1}^{+}p_{2}^{+}-2F_{2}\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\\
B & =\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}\left\{ \tr\left[\Gamma^{+}\left(\sla{p}_{1}+M_{N}\right)\left(\sla{p}_{2}+M_{N}\right)\right]\right\} \\
 & =2\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\left(F_{1}+F_{2}\right)-\left(p_{2}^{+}+p_{1}^{+}\right)^{2}F_{2}\left(\frac{Q^{2}}{2m^{2}}+2\right)
\end{align*}

\end_inset

把它看成一个关于
\begin_inset Formula $F_{1},F_{2}$
\end_inset

的线性方程组，求解得到
\begin_inset Formula 
\begin{align*}
 & F_{1}=\frac{-AQ^{2}\left(p_{1}^{+}+p_{2}^{+}\right)^{2}+4BM_{N}^{2}\left(p_{1}^{+}-p_{2}^{+}\right)^{2}}{8\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\left(M_{N}^{2}\left(p_{1}^{+}-p_{2}^{+}\right)^{2}-p_{1}^{+}p_{2}^{+}Q^{2}\right)},\\
 & F_{2}=\frac{-AM_{N}^{2}\left(p_{1}^{+}+p_{2}^{+}\right)^{2}+4Bp_{1}^{+}p_{2}^{+}}{2\left(p_{2}^{+}+p_{1}^{+}\right)^{2}\left(M_{N}^{2}\left(p_{1}^{+}-p_{2}^{+}\right)^{2}-p_{1}^{+}p_{2}^{+}Q^{2}\right)}
\end{align*}

\end_inset

如果代入对称参数化
\begin_inset Formula $\left(\xi,x\right)$
\end_inset

，得到
\begin_inset Formula 
\begin{align*}
 & A=\tr\left[\Gamma^{+}\left(\sla{p}_{1}+M_{N}\right)\gamma^{+}\left(\sla{p}_{2}+M_{N}\right)\right]=F_{1}2\frac{1-\xi^{2}}{\xi^{2}}Q^{2}-F_{2}2Q^{2}\\
 & B=\frac{\left(p_{2}+p_{1}\right)^{+}}{2m}\left\{ \tr\left[\Gamma^{+}\left(\sla{p}_{1}+M_{N}\right)\left(\sla{p}_{2}+M_{N}\right)\right]\right\} =\frac{Q^{2}}{\xi^{2}}\left[2F_{1}-F_{2}\frac{Q^{2}}{2m^{2}}\right]
\end{align*}

\end_inset

求解得到
\begin_inset Formula 
\[
F_{1}=\frac{-\xi^{2}\left(AQ^{2}-4BM_{N}^{2}\xi^{2}\right)}{2Q^{2}\left(4M_{N}^{2}\xi^{2}+\xi^{2}Q^{2}-Q^{2}\right)},\quad F_{2}=\frac{-2M_{N}^{2}\xi^{2}\left(A+B\xi^{2}-B\right)}{Q^{2}\left(4M_{N}^{2}\xi^{2}+\xi^{2}Q^{2}-Q^{2}\right)}
\]

\end_inset


\begin_inset Formula $\xi\to0$
\end_inset

的极限和下面的公式一致。
