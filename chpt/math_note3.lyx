\begin_layout Section
曲线的曲率
\end_layout

\begin_layout Standard
ref:
\begin_inset CommandInset href
LatexCommand href
name "曲线的曲率"
target "https://baike.baidu.com/item/%E6%9B%B2%E7%8E%87/9985286"
literal "false"

\end_inset

是曲线上某个点的切线转角
\begin_inset Formula $\Delta\alpha$
\end_inset

对弧长
\begin_inset Formula $\Delta s$
\end_inset

的转动率.
\begin_inset Formula 
\[
K=\lim_{\Delta s\to0}\abs*{\frac{\Delta\alpha}{\Delta s}}
\]

\end_inset

如果曲线的方程是
\begin_inset Formula $y=f\left(x\right)$
\end_inset

，且
\begin_inset Formula $y=f\left(x\right)$
\end_inset

具有二阶导数，在某一点
\begin_inset Formula $\left(x,y\right)$
\end_inset

的斜率为
\begin_inset Formula $y^{\prime}=\tan\alpha$
\end_inset

，所以
\begin_inset Formula 
\begin{align*}
 & y^{\prime\prime}=\sec^{2}\alpha\frac{\dif\alpha}{\dif x}\\
 & \frac{\dif\alpha}{\dif x}=\frac{y^{\prime\prime}}{\sec^{2}\alpha}=\frac{y^{\prime\prime}}{1+\tan^{2}\alpha}=\frac{y^{\prime\prime}}{1+y^{\prime2}}
\end{align*}

\end_inset

而
\begin_inset Formula $\dif s=\sqrt{1+y^{\prime2}}\dif x$
\end_inset

，所以曲线在电
\begin_inset Formula $\left(x,y\right)$
\end_inset

的斜率为
\begin_inset Formula 
\[
K=\frac{\abs{y^{\prime\prime}}}{\left(1+y^{\prime2}\right)^{3/2}}
\]

\end_inset

如果曲线由参数方程给出，
\begin_inset Formula 
\[
x=x\left(t\right),\quad y=y\left(t\right),
\]

\end_inset

使用参数方程求导方法得到
\begin_inset Formula 
\[
\frac{\dif y}{\dif x}=\frac{y^{\prime}}{x^{\prime}},\quad\frac{\dif^{2}y}{\dif x^{2}}=\frac{y^{\prime\prime}x^{\prime}-x^{\prime\prime}y^{\prime}}{x^{\prime2}}\frac{1}{x^{\prime}}
\]

\end_inset


\begin_inset Formula 
\[
K=\frac{\abs{y^{\prime\prime}x^{\prime}-x^{\prime\prime}y^{\prime}}}{\left(1+y^{\prime2}/x^{\prime2}\right)^{3/2}x^{\prime3}}=\frac{\abs{y^{\prime\prime}x^{\prime}-x^{\prime\prime}y^{\prime}}}{\left(x^{\prime2}+y^{\prime2}\right)^{3/2}}
\]

\end_inset

曲率
\begin_inset Formula $K$
\end_inset

的倒数，称为曲率半径，记作
\begin_inset Formula $\rho$
\end_inset

，
\begin_inset Formula 
\[
\rho=\frac{1}{K}=\frac{\left(1+y^{\prime2}\right)^{3/2}}{\abs{y^{\prime\prime}}}
\]

\end_inset


\end_layout

\begin_layout Standard
假设一个粒子作圆周运动，轨迹为
\begin_inset Formula $x=x\left(t\right),y=y\left(t\right)$
\end_inset

，则某点的曲率半径为
\begin_inset Formula 
\[
\rho=\frac{\abs{x^{\prime}y^{\prime\prime}-x^{\prime\prime}y^{\prime}}}{\left(x^{\prime2}+y^{\prime2}\right)^{3/2}}=\frac{\abs{v_{x}\dot{v}_{y}-\dot{v}_{x}v_{y}}}{v^{3/2}}
\]

\end_inset


\end_layout

\begin_layout Subsection
极坐标系
\end_layout

\begin_layout Standard
设粒子的轨迹为
\begin_inset Formula $\sbf r\left(t\right)=r\left(t\right)\sbf e_{r}\left(t\right)$
\end_inset

，则
\begin_inset Formula 
\[
\sbf v\left(t\right)=\sbf r^{\prime}=r^{\prime}\sbf e_{r}+r\left(\sbf e_{r}\right)^{\prime}=r^{\prime}\sbf e_{r}+r\sbf e_{\perp}\theta^{\prime}
\]

\end_inset

其中
\begin_inset Formula $\sbf e_{\perp}$
\end_inset

是垂直于
\begin_inset Formula $\sbf e_{r}$
\end_inset

的单位矢量，
\begin_inset Formula $\sbf e_{r},\sbf e_{\perp},\sbf e_{k}$
\end_inset

组成右手螺旋。
\begin_inset Formula 
\[
\frac{\dif\sbf e_{r}}{\dif t}=\frac{\dif\sbf e_{r}}{\dif\theta}\frac{\dif\theta}{\dif t}=\sbf e_{\perp}\frac{\dif\theta}{\dif t}
\]

\end_inset

其中
\begin_inset Formula $\theta$
\end_inset

是粒子轨迹与
\begin_inset Formula $x$
\end_inset

轴的夹角，而
\begin_inset Formula 
\begin{align*}
\frac{\dif\theta}{\dif t} & =\frac{\dif\arctan y/x}{\dif t}=\frac{1}{1+\left(y/x\right)^{2}}\frac{y^{\prime}x-x^{\prime}y}{x^{2}}\\
 & =\frac{y^{\prime}x-x^{\prime}y}{x^{2}+y^{2}}=\frac{\sbf e_{k}\cdot\sbf r\times\sbf v}{r^{2}}=\frac{\sbf v\cdot\sbf e_{\perp}}{r}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\sbf v=v_{r}\sbf e_{r}+v_{\theta}\sbf e_{\perp},\quad v_{\theta}=\sbf v\cdot\sbf e_{\perp}
\]

\end_inset


\end_layout

\begin_layout Subsection
自然坐标系
\end_layout

\begin_layout Standard
取粒子的速度方向
\begin_inset Formula $\sbf e_{v}$
\end_inset

，
\begin_inset Formula 
\[
\sbf e_{v}=\frac{\sbf v}{v},\quad\sbf v=v\sbf e_{v}
\]

\end_inset


\begin_inset Formula 
\[
\sbf v^{\prime}=v^{\prime}\sbf e_{v}+v\left(\sbf e_{v}\right)^{\prime}=v^{\prime}\sbf e_{v}+v\sbf e_{\perp}\theta^{\prime}
\]

\end_inset

其中
\begin_inset Formula $\sbf e_{\perp}$
\end_inset

是垂直于
\begin_inset Formula $\sbf e_{v}$
\end_inset

的单位矢量，
\begin_inset Formula $\sbf e_{r},\sbf e_{\perp},\sbf e_{k}$
\end_inset

组成右手螺旋。
\begin_inset Formula 
\[
\frac{\dif\sbf e_{v}}{\dif t}=\frac{\dif\sbf e_{v}}{\dif\theta}\frac{\dif\theta}{\dif t}=\sbf e_{\perp}\frac{\dif\theta}{\dif t}
\]

\end_inset

其中
\begin_inset Formula $\theta$
\end_inset

是粒子速度与
\begin_inset Formula $x$
\end_inset

轴的夹角，而
\begin_inset Formula 
\begin{align*}
\frac{\dif\theta}{\dif t} & =\frac{\dif\arctan v_{y}/v_{x}}{\dif t}=\frac{1}{1+\left(v_{y}/v_{x}\right)^{2}}\frac{v_{y}^{\prime}v_{x}-v_{x}^{\prime}v_{y}}{v_{x}^{2}}=v\frac{v_{y}^{\prime}v_{x}-v_{x}^{\prime}v_{y}}{\left(v_{x}^{2}+v_{y}^{2}\right)^{3/2}}\\
 & =\frac{v_{y}^{\prime}v_{x}-v_{x}^{\prime}v_{y}}{v_{x}^{2}+v_{y}^{2}}=\frac{\sbf e_{k}\cdot\sbf v\times\sbf v^{\prime}}{v^{2}}=\frac{\sbf v^{\prime}\cdot\sbf e_{\perp}}{v}
\end{align*}

\end_inset

考虑到轨迹的曲率的定义，
\begin_inset Formula 
\[
K=\frac{\abs{y^{\prime\prime}x^{\prime}-x^{\prime\prime}y^{\prime}}}{\left(1+y^{\prime2}/x^{\prime2}\right)^{3/2}x^{\prime3}}=\frac{\abs{y^{\prime\prime}x^{\prime}-x^{\prime\prime}y^{\prime}}}{\left(x^{\prime2}+y^{\prime2}\right)^{3/2}}
\]

\end_inset

则有
\begin_inset Formula 
\[
\frac{\dif\theta}{\dif t}=\frac{v}{\rho}
\]

\end_inset

最终得到，
\begin_inset Formula 
\begin{align*}
 & \sbf v^{\prime}=a\sbf e_{a}=v^{\prime}\sbf e_{v}+\sbf e_{\perp}\frac{v^{2}}{\rho},\quad a_{\perp}=\sbf v^{\prime}\cdot\sbf e_{\perp}=\frac{v^{2}}{\rho}\\
 & a^{2}=v^{\prime2}+\left(\frac{v^{2}}{\rho}\right)^{2}
\end{align*}

\end_inset


\end_layout

