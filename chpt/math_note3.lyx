\begin_layout Standard
如果
\begin_inset Formula $\sbf{r}=\sbf{x}-\sbf{x^{\prime}}$
\end_inset

，
\begin_inset Formula $r=\abs{\sbf{r}}$
\end_inset

并且
\begin_inset Formula 
\[
\sbf{\nabla^{\prime}}=\sbf{e_{x}}\frac{\partial}{\partial x^{\prime}}+\sbf{e_{y}}\frac{\partial}{\partial y^{\prime}}+\sbf{e_{z}}\frac{\partial}{\partial z^{\prime}},\quad\sbf{\nabla}=\sbf{e_{x}}\frac{\partial}{\partial x}+\sbf{e_{y}}\frac{\partial}{\partial y}+\sbf{e_{z}}\frac{\partial}{\partial z}
\]

\end_inset

则有
\begin_inset Formula 
\begin{align*}
 & \nabla r=-\nabla^{\prime}r=\frac{\sbf{r}}{r}\text{ 单位矢量}\\
 & \nabla\cdot\sbf{r}=-\nabla^{\prime}\cdot\sbf{r}=3\\
 & \nabla\times\sbf{r}=-\nabla^{\prime}\times\sbf{r}=0\\
 & \nabla\sbf{r}=-\nabla^{\prime}\sbf{r}=\sbf{I}\text{ 单位张量}\\
 & \nabla\frac{1}{r}=-\nabla^{\prime}\frac{1}{r}=-\frac{\sbf{r}}{r^{3}}\\
 & \nabla\cdot\frac{\sbf{r}}{r^{3}}=-\nabla^{\prime}\cdot\frac{\sbf{r}}{r^{3}}=\delta\left(r\right)\left(r\neq0\right)\\
 & \nabla\times\frac{\sbf{r}}{r^{3}}=-\nabla^{\prime}\times\frac{\sbf{r}}{r^{3}}=0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
对于一个常矢量
\begin_inset Formula $\sbf{a}$
\end_inset

，即
\begin_inset Formula $\nabla\cdot\sbf{a}=0$
\end_inset

，
\begin_inset Formula $\nabla\times\sbf{a}=0$
\end_inset

。考虑到
\begin_inset Formula $\nabla\sbf{r}$
\end_inset

是单位张量，
\begin_inset Formula $\nabla\times\sbf{r}=0$
\end_inset

:
\begin_inset Formula 
\[
\left(\sbf{a}\cdot\nabla\right)\sbf{r}=\sbf{a}\cdot\sbf{\nabla r}=\sbf{a}\cdot\sbf{I}=\sbf{a}
\]

\end_inset


\begin_inset Formula 
\[
\nabla\left(\sbf{a}\cdot\sbf{r}\right)=\left(\sbf{a}\cdot\sbf{\nabla}\right)\sbf{r}=\sbf{a}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\nabla\left(\sbf{A\cdot B}\right) & =\sbf{B}\times\left(\sbf{\nabla}\times\sbf{A}\right)+\left(\sbf{B}\cdot\sbf{\nabla}\right)\sbf{A}+\sbf{A}\times\left(\sbf{\nabla}\times\sbf{B}\right)+\left(\sbf{A}\cdot\sbf{\nabla}\right)\sbf{B}\\
\sbf{A}\times\left(\sbf{\nabla}\times\sbf{A}\right) & =\frac{1}{2}\sbf{\nabla}\left(\sbf{A}\cdot\sbf{A}\right)-\left(\sbf{A}\cdot\sbf{\nabla}\right)\sbf{A}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\nabla\cdot\left(\sbf{AB}\right)=\left(\nabla\cdot\sbf{A}\right)\sbf{B}+\sbf{A}\cdot\nabla\sbf{B}
\]

\end_inset

其中
\begin_inset Formula $\sbf{AB}$
\end_inset

为并矢，或者说二阶张量。
\end_layout

