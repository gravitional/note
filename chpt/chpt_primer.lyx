\left[V_{a}^{0}\left(t,\vec{x}\right),S_{b}\left(t,\vec{y}\right)\right] & =\delta^{3}\left(\vec{x}-\vec{y}\right)if_{abc}S_{c}\left(t,\vec{x}\right),\quad b=1,\cdots,8\nonumber \\
\left[V_{a}^{0}\left(t,\vec{x}\right),S_{0}\left(t,\vec{y}\right)\right] & =0\nonumber \\
\left[V_{a}^{0}\left(t,\vec{x}\right),P_{b}\left(t,\vec{y}\right)\right] & =\delta^{3}\left(\vec{x}-\vec{y}\right)if_{abc}P_{c}\left(t,\vec{x}\right),\quad b=1,\cdots,8\nonumber \\
\left[V_{a}^{0}\left(t,\vec{x}\right),P_{0}\left(t,\vec{y}\right)\right] & =0\nonumber 
\end{align}

\end_inset


\begin_inset Formula 
\begin{align*}
\left[A_{a}^{0}\left(t,\vec{x}\right),V_{b}^{\mu}\left(t,\vec{y}\right)\right] & =\delta^{3}\left(\vec{x}-\vec{y}\right)if_{abc}A_{c}^{\mu}\left(t,\vec{x}\right)\\
\left[A_{a}^{0}\left(t,\vec{x}\right),V^{\mu}\left(t,\vec{y}\right)\right] & =0\\
\left[A_{a}^{0}\left(t,\vec{x}\right),A_{b}^{\mu}\left(t,\vec{y}\right)\right] & =\delta^{3}\left(\vec{x}-\vec{y}\right)if_{abc}V_{c}^{\mu}\left(t,\vec{x}\right)\\
