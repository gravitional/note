\left[A_{a}^{0}\left(t,\vec{x}\right),S_{0}\left(t,\vec{y}\right)\right] & =i\delta^{3}\left(\vec{x}-\vec{y}\right)\sqrt{\frac{2}{3}}P_{a}\left(t,\vec{x}\right)\\
\left[A_{a}^{0}\left(t,\vec{x}\right),P_{b}\left(t,\vec{y}\right)\right] & =-i\delta^{3}\left(\vec{x}-\vec{y}\right)\left[\sqrt{\frac{2}{3}}\delta_{ab}S_{0}\left(t,\vec{x}\right)+d_{abc}S_{c}\left(t,\vec{x}\right)\right],\quad b=1,\cdots,8\\
\left[A_{a}^{0}\left(t,\vec{x}\right),P_{0}\left(t,\vec{y}\right)\right] & =-i\delta^{3}\left(\vec{x}-\vec{y}\right)\sqrt{\frac{2}{3}}S_{a}\left(t,\vec{x}\right)
\end{align*}

\end_inset

等等。
\end_layout

