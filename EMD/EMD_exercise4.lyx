\end_layout

\begin_layout Frame
\begin_inset Formula 
\[
\varepsilon_{1}E\sin\theta\left[1+\frac{\tan\left(\theta-\theta^{\prime\prime}\right)}{\tan\left(\theta+\theta^{\prime\prime}\right)}\right]=\varepsilon_{2}E\frac{2\cos\theta\sin\theta^{\prime\prime}}{\sin\left(\theta+\theta^{\prime\prime}\right)\cos\left(\theta-\theta^{\prime\prime}\right)}\sin\theta^{\prime\prime}
\]

\end_inset

考虑到
\begin_inset Formula $\sqrt{\varepsilon_{1}}\sin\theta=\sqrt{\varepsilon_{2}}\sin\theta^{\prime\prime}$
\end_inset


\begin_inset Formula 
\begin{align*}
\sin\theta\left[1+\frac{\tan\left(\theta-\theta^{\prime\prime}\right)}{\tan\left(\theta+\theta^{\prime\prime}\right)}\right] & =\frac{\sin^{2}\theta}{\sin^{2}\theta^{\prime\prime}}\frac{2\cos\theta\sin\theta^{\prime\prime}}{\sin\left(\theta+\theta^{\prime\prime}\right)\cos\left(\theta-\theta^{\prime\prime}\right)}\sin\theta^{\prime\prime}\\
\left[1+\frac{\tan\left(\theta-\theta^{\prime\prime}\right)}{\tan\left(\theta+\theta^{\prime\prime}\right)}\right] & =\frac{2\sin\theta\cos\theta}{\sin\left(\theta+\theta^{\prime\prime}\right)\cos\left(\theta-\theta^{\prime\prime}\right)}\\
\frac{2\sin\left(2\theta\right)}{\sin\left(2\theta\right)+\sin\left(2\theta^{\prime\prime}\right)} & =\frac{2\sin\left(2\theta\right)}{\sin\left(2\theta\right)+\sin\left(2\theta^{\prime\prime}\right)}
\end{align*}

\end_inset

其中使用了：
\begin_inset Formula 
\begin{align*}
\sin\alpha\cos\beta & =\frac{1}{2}\left[\sin\left(\alpha+\beta\right)+\sin\left(\alpha-\beta\right)\right]\\
\tan\left(\alpha+\beta\right) & =\frac{\tan\alpha+\tan\beta}{1-\tan\alpha\tan\beta}
\end{align*}

\end_inset


\end_layout

