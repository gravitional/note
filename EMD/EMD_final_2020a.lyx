\begin_layout Subsection
洛伦兹规范
\end_layout

\begin_layout Enumerate
洛伦兹规范
\begin_inset Formula 
\begin{align*}
\text{洛伦兹规范：} & \frac{1}{c^{2}}\partial_{t}\varphi+\nabla\cdot\sbf A=0\\
\text{达朗贝尔方程：} & \frac{1}{c^{2}}\partial_{t}^{2}\sbf A-\nabla^{2}\sbf A=\mu_{0}\sbf J,\quad\frac{1}{c^{2}}\partial_{t}^{2}\varphi-\nabla^{2}\varphi=\frac{\rho}{\varepsilon_{0}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
协变形式：
\begin_inset Formula 
\begin{align*}
\text{洛伦兹规范：} & \partial_{\mu}A^{\mu}=0.\\
\text{达朗贝尔方程：} & \partial^{2}A^{\mu}=-\mu_{0}J^{\mu}
\end{align*}

\end_inset

达朗贝尔方程的特解为推迟势：
\begin_inset Formula 
\[
\sbf A\left(t,\sbf x\right)=\frac{\mu_{0}}{4\pi}\int_{V}\frac{\sbf J\left(t-\frac{r}{c},\sbf x^{\prime}\right)}{r}\dif V^{\prime},\quad\varphi\left(t,\sbf x\right)=\frac{1}{4\pi\varepsilon_{0}}\int_{V}\frac{\rho\left(t-\frac{r}{c},\sbf x^{\prime}\right)}{r}\dif V^{\prime}
\]

\end_inset


\end_layout

\begin_layout Subsection
任意运动带电粒子
\end_layout

\begin_layout Standard
辐射势为：
\begin_inset Formula 
\[
\frac{\varphi\left(t,\sbf x\right)}{c}=\frac{\mu_{0}}{4\pi}\frac{qc}{rs},\quad\sbf A\left(t,\sbf x\right)=\frac{\mu_{0}}{4\pi}\frac{q\sbf v\left(t,\sbf x\right)}{rs}
\]

\end_inset

其中
\begin_inset Formula $s=1-\sbf e_{r}\cdot\sbf\beta,\quad\sbf\beta=\sbf v/c$
\end_inset

。对于作任意运动的粒子，计算其辐射至
\begin_inset Formula $1/r$
\end_inset

的领头阶：
\begin_inset Formula 
\begin{align*}
\sbf E & =\frac{\mu_{0}q}{4\pi}\frac{c}{r}\frac{\sbf e_{r}\times\left[\left(\sbf e_{r}-\sbf\beta\right)\times\dot{\sbf\beta}\right]}{s^{3}}=\frac{\mu_{0}q}{4\pi}\frac{c}{r}\frac{\dot{\sbf\beta}\cdot\left(\sbf e_{r}\sbf e_{r}-I\right)+\sbf e_{r}\cdot\left(\dot{\sbf\beta}\sbf\beta-\sbf\beta\dot{\sbf\beta}\right)}{s^{3}}\\
\sbf B & =\frac{1}{c}\sbf e_{r}\times\sbf E=\frac{\mu_{0}q}{4\pi}\frac{1}{r}\frac{\left(\sbf e_{r}\sbf e_{r}-I\right)\cdot\left[\left(\sbf e_{r}-\sbf\beta\right)\times\dot{\sbf\beta}\right]}{s^{3}}
\end{align*}

\end_inset


\end_layout

