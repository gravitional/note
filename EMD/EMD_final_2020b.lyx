\begin_layout Subsection
拉普拉斯方程
\end_layout

\begin_layout Standard
球坐标中的形式为，
\begin_inset Formula 
\begin{align*}
 & \nabla^{2}\varphi=0\\
 & \frac{1}{r^{2}}\partial_{r}\left(r^{2}\partial_{r}\varphi\right)+\frac{1}{r^{2}\sin\theta}\partial_{\theta}\left(\sin\theta\partial_{\theta}\varphi\right)+\frac{1}{r^{2}\sin^{2}\theta}\partial_{\phi}^{2}\varphi=0
\end{align*}

\end_inset

球函数的通解为
\begin_inset Formula 
\begin{align*}
\varphi\left(r,\theta,\phi\right) & =\sum_{\ell,m}\left(a_{\ell,m}r^{\ell}+\frac{b_{\ell,m}}{r^{\ell+1}}\right)Y_{\ell}^{m}\left(\theta,\varphi\right)\\
 & =\sum_{l\ell,m}\left\{ \left(a_{\ell,m}r^{\ell}+\frac{b_{\ell,m}}{r^{\ell+1}}\right)P_{\ell}^{m}\left(\cos\theta\right)\cos m\phi+\left(c_{\ell,m}r^{\ell}+\frac{d_{\ell,m}}{r^{\ell+1}}\right)P_{\ell}^{m}\left(\cos\theta\right)\sin m\phi\right\} 
\end{align*}

\end_inset

如果是轴对称情形，化简为
\begin_inset Formula 
\[
\varphi\left(r,\theta\right)=\sum_{\ell}\left(a_{\ell}r^{\ell}+\frac{b_{\ell}}{r^{\ell+1}}\right)P_{\ell}\left(\cos\theta\right)
\]

\end_inset


\end_layout

