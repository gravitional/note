\begin_layout Subsection
波导管中的电磁波
\end_layout

\begin_layout Enumerate

\color blue
证明：
\color inherit
真空中的电磁波满足
\begin_inset Formula 
\[
\nabla\times\sbf E=-\frac{\partial\sbf B}{\partial t},\quad\nabla\times\sbf H=\frac{\partial D}{\partial t}
\]

\end_inset

对于单色波的情形，
\begin_inset Formula $\partial/\partial t\to-i\omega$
\end_inset

，也就是
\begin_inset Formula 
\[
\nabla\times\sbf E=i\omega\mu_{0}\sbf H,\quad\nabla\times\sbf H=-i\omega\varepsilon_{0}\sbf E
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\sbf E$
\end_inset

和
\begin_inset Formula $\sbf H$
\end_inset

对
\begin_inset Formula $z$
\end_inset

的依赖已经归到行波部分
\begin_inset Formula $e^{-i\left(\omega t-k_{z}z\right)}$
\end_inset

，剩下的部分只依赖于
\begin_inset Formula $x,y$
\end_inset

：
\begin_inset Formula 
\begin{align*}
-i\omega\varepsilon_{0}\left[\begin{array}{c}
E_{x}\\
E_{y}\\
{\color{blue}E_{z}}
\end{array}\right] & =\nabla\times\sbf H=\left[\begin{array}{ccc}
i & j & k\\
\partial_{x} & \partial_{y} & \partial_{z}\\
e^{-ik_{z}z}H_{x}\left(x,y\right) & e^{-ik_{z}z}H_{y}\left(x,y\right) & e^{-ik_{z}z}H_{z}\left(x,y\right)
\end{array}\right]\\
 & =\left[\begin{array}{c}
{\color{blue}\partial_{y}H_{z}}-ik_{z}H_{y}\\
-{\color{blue}\partial_{x}H_{z}}+ik_{z}H_{x}\\
\partial_{x}H_{y}-\partial_{y}H_{x}
\end{array}\right]
\end{align*}

\end_inset

类似地，
\begin_inset Formula 
\[
i\omega\mu_{0}\left[\begin{array}{c}
H_{x}\\
H_{y}\\
{\color{blue}H_{z}}
\end{array}\right]=\nabla\times\sbf E=\left[\begin{array}{c}
{\color{blue}\partial_{y}E_{z}}-ik_{z}E_{y}\\
-{\color{blue}\partial_{x}E_{z}}+ik_{z}E_{x}\\
\partial_{x}E_{y}-\partial_{y}E_{x}
\end{array}\right]
\]

\end_inset

以其中一个为例，
\begin_inset Formula 
\begin{align*}
-i\omega\varepsilon_{0}E_{x} & ={\color{blue}\partial_{y}H_{z}}-ik_{z}H_{y}\\
\Rightarrow-i\omega^{2}\mu_{0}\varepsilon_{0}E_{x} & =\omega\mu_{0}{\color{blue}\partial_{y}H_{z}}-k_{z}\left(-{\color{blue}\partial_{x}E_{z}}+ik_{z}E_{x}\right)\\
\Rightarrow-i\left(k^{2}-k_{z}^{2}\right)E_{x} & =\omega\mu_{0}{\color{blue}\partial_{y}H_{z}}+k_{z}{\color{blue}\partial_{x}E_{z}}
\end{align*}

\end_inset

最后的结果为：
\begin_inset Formula 
\begin{align*}
 & E_{x}=\frac{i}{k^{2}-k_{z}^{2}}\left(\omega\mu_{0}\partial_{y}H_{z}+k_{z}\partial_{x}E_{z}\right)\\
 & E_{y}=\frac{i}{k^{2}-k_{z}^{2}}\left(-\omega\mu_{0}\partial_{x}H_{z}+k_{z}\partial_{y}E_{z}\right)\\
 & H_{x}=\frac{i}{k^{2}-k_{z}^{2}}\left(-\omega\varepsilon_{0}\partial_{y}E_{z}+k_{z}\partial_{x}H_{z}\right)\\
 & H_{y}=\frac{i}{k^{2}-k_{z}^{2}}\left(\omega\varepsilon_{0}\partial_{x}E_{z}+k_{z}\partial_{y}H_{z}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
旋转的永磁体小球
\end_layout

\begin_layout Enumerate

\color blue
解：
\color inherit
取小球位于坐标原点，以
\begin_inset Formula $z$
\end_inset

轴为旋转轴。
\begin_inset Formula $\sbf M_{0}$
\end_inset

以角速度
\begin_inset Formula $\omega$
\end_inset

转动，可分解为相位差为
\begin_inset Formula $\pi/2$
\end_inset

的互相垂直的线振动（参阅第四章习题5）
\begin_inset Formula 
\[
\sbf m=\sbf e_{x}m_{0}\cos\omega t+\sbf e_{y}m_{0}\sin\omega t
\]

\end_inset

并写成复数形式，
\begin_inset Formula 
\begin{align*}
\sbf m & ={\color{blue}\frac{4\pi R_{0}^{3}M_{0}}{3}}\left(\sbf e_{x}+i\sbf e_{y}\right)e^{-i\omega t}={\color{blue}m_{0}}\left(\sbf e_{x}+i\sbf e_{y}\right)e^{-i\omega t}\\
\sbf m & =m_{0}e^{-i\left(\omega t-\phi\right)}\left(\sin\theta\sbf e_{R}+\cos\theta\sbf e_{\theta}+i\sbf e_{\phi}\right),\quad\sbf{\ddot{m}}=-\omega^{2}\sbf m
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
直角坐标基矢量与球坐标基矢量的变换，
\begin_inset Formula 
\begin{align*}
\sbf e_{x} & =\sin\theta\cos\phi\sbf e_{R}+\cos\theta\cos\phi\sbf e_{\theta}-\sin\phi\sbf e_{\phi},\\
\sbf e_{y} & =\sin\theta\sin\phi\sbf e_{R}+\cos\theta\sin\phi\sbf e_{\theta}+\cos\phi\sbf e_{\phi},\quad\underset{\rightarrow}{\left(R,\theta,\phi\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
辐射场和平均辐射能流密度为，
\begin_inset Formula 
\begin{align*}
\sbf B & =\frac{\mu_{0}}{4\pi}\frac{e^{ikR}}{R}i\sbf k_{R}\times\left(-\sbf{m}\times i\sbf k_{R}\right)=\frac{\mu_{0}}{4\pi}\frac{e^{-i\left(\omega t-kR-\phi\right)}}{R}\frac{{\color{blue}m_{0}}\omega^{2}}{c^{2}}\left(\sbf e_{\theta}\cos\theta+i\sbf e_{\phi}\right)\\
\sbf E & =c\sbf B\times\sbf e_{R}=\frac{\mu_{0}}{4\pi}\frac{e^{-i\left(\omega t-kR-\phi\right)}}{R}\frac{{\color{blue}m_{0}}\omega^{2}}{c}\left(-\sbf e_{\phi}\cos\theta+i\sbf e_{\theta}\right)\\
\overline{S} & =\frac{c}{2\mu_{0}}\left(\sbf B^{*}.\sbf B\right)\sbf e_{R}=\frac{\mu_{0}}{32\pi^{2}}\frac{1}{R^{2}}\frac{{\color{blue}m_{0}^{2}}\omega^{4}}{c^{3}}\left[1+\cos^{2}\theta\right]\sbf e_{R}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
电磁场的boost变换
\end_layout

\begin_layout Enumerate

\color blue
解：
\color inherit
令
\begin_inset Formula $\Sigma^{\prime}$
\end_inset

系沿
\begin_inset Formula $\Sigma$
\end_inset

系的
\begin_inset Formula $x$
\end_inset

轴正向运动，则在
\begin_inset Formula $\Sigma$
\end_inset

系中
\begin_inset Formula 
\[
E_{x}=E_{z}=0,\quad\sbf E=E_{y}\sbf e_{y};\quad B_{x}=B_{y}=0,\quad\sbf B=B_{z}\sbf e_{z}
\]

\end_inset

而电磁场的变换关系为
\begin_inset Formula 
\begin{align*}
 & \sbf E_{\ssl}^{\prime}=\sbf E_{\ssl},\quad\sbf B_{\ssl}^{\prime}=\sbf B_{\ssl},\quad\text{与运动方向平行的分量}\\
 & \sbf E_{\perp}^{\prime}=\gamma\left(\sbf E_{\perp}+\sbf v\times\sbf B_{\perp}\right),\quad\sbf B_{\perp}^{\prime}=\gamma\left(\sbf B_{\perp}-\frac{\sbf v}{c^{2}}\times\sbf E_{\perp}\right).
\end{align*}

\end_inset

得到
\begin_inset Formula $\Sigma^{\prime}$
\end_inset

系中
\begin_inset Formula 
\begin{align*}
 & E_{x}^{\prime}=B_{x}^{\prime}=0\\
 & E_{y}^{\prime}=\gamma\left(E_{y}-vB_{z}\right)=\gamma\left(\abs{\sbf E}-v\abs{\sbf B}\right)\\
 & B_{z}^{\prime}=\gamma\left(B_{z}-\frac{v}{c^{2}}E_{y}\right)=\gamma\left(\abs{\sbf B}-\frac{v}{c^{2}}\abs{\sbf E}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
若在
\begin_inset Formula $\Sigma^{\prime}$
\end_inset

系中只观察到电场
\begin_inset Formula $\sbf E^{\prime}$
\end_inset

，磁场
\begin_inset Formula $\sbf B^{\prime}=0$
\end_inset

，上面的变换关系得：
\begin_inset Formula 
\[
v=\frac{c^{2}\abs{\sbf B}}{\abs{\sbf E}},\quad\text{i.e.}\quad\sbf v=\frac{c^{2}}{E^{2}}\sbf E\times\sbf B
\]

\end_inset

且
\begin_inset Formula $\Sigma$
\end_inset

系中应满足
\begin_inset Formula $\abs{\sbf E}>c\abs{\sbf B}$
\end_inset

。
\end_layout

\begin_layout Enumerate
若在
\begin_inset Formula $\Sigma^{\prime}$
\end_inset

系中只观察到磁场
\begin_inset Formula $\sbf B^{\prime}$
\end_inset

，电场
\begin_inset Formula $\sbf E^{\prime}=0$
\end_inset

：
\begin_inset Formula 
\[
\sbf v=\frac{1}{B^{2}}\sbf E\times\sbf B
\]

\end_inset

且
\begin_inset Formula $\Sigma$
\end_inset

系中应满足
\begin_inset Formula $\abs{\sbf E}<c\abs{\sbf B}$
\end_inset

。
\end_layout

\begin_layout Subsection
切伦科夫辐射
\end_layout

\begin_layout Enumerate
粒子以速度
\begin_inset Formula $\sbf v$
\end_inset

作匀速直线运动，真空中的光速为
\begin_inset Formula $c$
\end_inset

，将真空推迟势相因子中的
\begin_inset Formula $c$
\end_inset

换作
\begin_inset Formula $c/n$
\end_inset

，
\begin_inset Formula 
\[
\sbf A_{\omega}\left(\sbf x\right)=\frac{q}{8\pi^{2}\varepsilon_{0}c^{2}}\frac{e^{ikR}}{R}\int_{-\infty}^{+\infty}\sbf v\left(t^{\prime}\right)e^{i\left(\omega t^{\prime}-\sbf k\cdot\sbf x_{q}\right)}\dif t^{\prime}
\]

\end_inset

其中
\begin_inset Formula $\sbf v$
\end_inset

沿着
\begin_inset Formula $x$
\end_inset

方向，
\begin_inset Formula $\sbf e_{r}$
\end_inset

与
\begin_inset Formula $\sbf v$
\end_inset

夹角为
\begin_inset Formula $\theta$
\end_inset

，
\begin_inset Formula $\sbf e_{r}\cdot\sbf x_{q}=x_{q}\cos\theta$
\end_inset

，
\begin_inset Formula $vt^{\prime}=x_{q}$
\end_inset

。对应的磁场为
\begin_inset Formula 
\begin{align*}
\sbf B_{\omega} & =ik\times\sbf A_{\omega}=\frac{i\omega}{c}\sbf e_{r}\times\sbf A_{\omega}\\
B_{\omega} & =\frac{\mu_{0}q}{8\pi^{2}}\frac{i\omega}{c}\frac{e^{ikR}}{R}\sin\theta\int_{-\infty}^{+\infty}e^{i\omega\left(\frac{1}{v}-\frac{1}{c}\cos\theta\right)x_{q}}\dif x_{q}\\
B_{\omega} & =\frac{\mu_{0}q}{4\pi}\frac{i\omega}{c}\frac{e^{ikR}}{R}\sin\theta\,\delta\left(\frac{\omega}{v}-\frac{\omega}{c}\cos\theta\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\sbf E_{\omega} & =c\sbf B\times\sbf e_{r}=-i\omega\sbf e_{r}\times\left(\sbf e_{r}\times\sbf A_{\omega}\right)\\
E_{\omega} & =\frac{\mu_{0}q}{4\pi}i\omega\frac{e^{ikR}}{R}\sin\theta\,\delta\left(\frac{\omega}{v}-\frac{\omega}{c}\cos\theta\right)
\end{align*}

\end_inset

辐射电磁场的方向
\begin_inset Formula $\theta$
\end_inset

满足
\begin_inset Formula $v\cos\theta=c$
\end_inset

 。
\end_layout

\begin_layout Enumerate
单位路程单位频率间隔的辐射能量，
\begin_inset Formula 
\begin{align*}
\frac{\dif^{2}W_{\omega}}{\dif\Omega\dif L} & =\frac{\mu_{0}q^{2}\omega^{2}}{8\pi^{2}c}\sin^{2}\theta\,\delta\left(\frac{\omega}{v}-\frac{\omega}{c}\cos\theta\right)\\
\frac{\dif W_{\omega}}{\dif L} & =\frac{\mu_{0}q^{2}\omega^{2}}{8\pi^{2}c}\left(1-\frac{c^{2}}{v^{2}}\right)\oint\delta\left(\frac{\omega}{v}-\frac{\omega}{c}\cos\theta\right)\dif\Omega\\
\frac{\dif W_{\omega}}{\dif L} & =\frac{\mu_{0}q^{2}}{4\pi}\left(1-\frac{c^{2}}{v^{2}}\right)\omega
\end{align*}

\end_inset


