\begin_layout Standard
则单层的情况 
\begin_inset Formula $y=f(u)$
\end_inset

，
导数 
\begin_inset Formula $f'(u)$
\end_inset


\begin_inset Formula 
\[
u_{j}=\sum_{i}x_{i}w_{ij}
\]

\end_inset

求偏导数，

\begin_inset Formula $\text{wx}$
\end_inset

 表示（其他 
\begin_inset Formula $w_{k\ell}$
\end_inset

保持不变，

\begin_inset Formula $x_{k}$
\end_inset

作为参数），

\begin_inset Formula $y_{\text{ot}}$
\end_inset

表示 y others。

\begin_inset Formula 
\[
y=f(u),\quad f'(u)=\frac{\dd f(u)}{\dd u},
\]

\end_inset

然后用反函数 
\begin_inset Formula 
\[
f'(u)\to f'(f^{-1}(y))\to\;g(y)
\]

\end_inset


\begin_inset Formula 
\begin{align}
\left.\frac{\partial E(x_{\bullet})}{\partial w_{ij}}\right|_{\text{wx}} & =\sum_{k}\left.\frac{\partial E}{\partial y_{k}}\right|_{y_{\text{ot}}}\,\left.\frac{\partial y_{k}}{\partial w_{ij}}\right|_{\text{wx}}\label{eq:2.16}\\
 & =\sum_{k}\left.\frac{\partial E}{\partial y_{k}}\right|_{y_{\text{ot}}}\,\left.f'(u_{k})\right|\left.\frac{\partial u_{k}}{\partial w_{ij}}\right|_{\text{wx}}\nonumber \\
 & =\left.\frac{\partial E}{\partial y_{j}}\right|_{y_{\text{ot}}}\;g(y_{j})\,x_{i}\nonumber 
\end{align}

\end_inset

仅有 
\begin_inset Formula $k=j$
\end_inset

 这一项不为零。

\begin_inset Formula 
\begin{align}
\left.\frac{\partial E}{\partial w_{(a-1);ij}}\right|_{\text{wx}} & =\sum_{k}\left.\frac{\partial E}{\partial y_{a;k}}\right|_{y_{a;\text{ot}}}\;\left.\frac{\partial y_{a;k}}{\partial w_{(a-1);ij}}\right|_{\text{wx}}\label{eq:2.34}\\
 & =\sum_{k}\left.\frac{\partial E}{\partial y_{a;k}}\right|_{y_{a;\text{ot}}}\;\left.f'(u_{a;k})\right|\;\left.\frac{\partial u_{a;k}}{\partial w_{(a-1);ij}}\right|_{\text{wx}}\nonumber \\
 & =\left.\frac{\partial E}{\partial y_{a;k}}\right|_{y_{a;\text{ot}}}\;g(y_{a;j})\;y_{(i-1)}\nonumber 
\end{align}

\end_inset


\end_layout

