\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & {\color{blue}\left.\frac{\partial E}{\partial w_{p;ij}}\right|_{w_{p;\text{ot}}}}=y_{q;i}\,[\left.\frac{\partial E}{\partial y_{q;{\color{red}j}}}\right|_{z_{q;\text{ot}}}g(y_{q;{\color{red}j}})]\\
 & {\color{brown}\left.\frac{\partial E}{\partial y_{p;j}}\right|_{w_{p;\text{ot}}}}=\sum_{{\color{red}k}}\,[w_{q;j{\color{red}k}}\,g(y_{q;{\color{red}k}})]\,\left.\frac{\partial E}{\partial y_{q;{\color{red}k}}}\right|_{y_{q;\text{ot}}}
\end{align*}

\end_inset

这就是 
\series bold
反向传播
\series default
：

\begin_inset Formula 
\[
\left(\begin{array}{c}
y_{p;j};{\color{brown}\left.\frac{\partial E}{\partial y_{p;j}}\right|_{w_{p;\text{ot}}}}\\
w_{p;ij};{\color{blue}\left.\frac{\partial E}{\partial w_{p;ij}}\right|_{w_{p;\text{ot}}}}
\end{array}\right)\Leftarrow\left(\begin{array}{c}
y_{q;j};\left.\frac{\partial E}{\partial y_{q;j}}\right|_{y_{q;\text{ot}}}\\
w_{q;ij};\left.\frac{\partial E}{\partial w_{q;ij}}\right|_{w_{q;\text{ot}}}
\end{array}\right)
\]

\end_inset


\end_layout

