reference "eq:j21"
plural "false"
caps "false"
noprefix "false"

\end_inset

、
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:j22"
plural "false"
caps "false"
noprefix "false"

\end_inset

与 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:j18"
plural "false"
