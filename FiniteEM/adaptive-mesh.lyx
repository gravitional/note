\begin{align}
-\nabla\cdot(\epsilon_{r}\nabla\phi) & =\rho/\epsilon_{0},\quad\text{in}\Omega\label{eq:j1}\\
\phi & =0\quad\text{on}\Gamma_{D}\label{eq:j2}\\
\partial\phi/\partial n & =0\quad\text{on}\Gamma_{N}.\label{eq:j3}
\end{align}

\end_inset


