\begin_layout Standard
使用以上记号，将两组方程简写为
\begin_inset Formula 
\begin{align}
K_{1,mn}^{e}{\color{blue}\delta\phi_{n}}+M_{a,mn}{\color{blue}\delta\phi_{n}}+M_{b,mn}{\color{red}\delta C_{n}}=b_{1,m}^{e}+b_{2,m}^{s}\label{eq:eq10}
\end{align}

\end_inset


\begin_inset Formula 
\begin{align}
 & Y_{mn}^{e}\,\partial_{t}\delta C_{n}+K_{2,mn}^{e}{\color{red}\delta C_{n}}+b_{3,mn}^{e}\partial_{t}C_{nA}+M_{c,mn}{\color{blue}\delta\phi_{n}}+M_{d,mn}{\color{red}\delta C_{n}}\label{eq:eq11}\\
 & =b_{4,m}^{e}+b_{5,m}^{e}+b_{6,m}^{s}+b_{7,m}^{s}\nonumber 
\end{align}

\end_inset

以上各物理量取值均在
\begin_inset Formula $t+\Delta t$
\end_inset

时刻。由于两个方程存在耦合，需要联立求解，其中
\begin_inset Formula $M_{\{a,b,c,d\},mn}$
\end_inset

描述
\begin_inset Formula $\delta C_{n}$
\end_inset

和
\begin_inset Formula $\delta\phi_{n}$
\end_inset

的耦合，它们由
\begin_inset Formula $M_{\{1,2,3,4\},mn}^{s}$
\end_inset

作线性组合得到。
\begin_inset Formula 
\begin{align*}
\left[\begin{array}{cc}
K_{1,mn}^{e}+M_{a,mn} & M_{b,mn}\\
M_{c,mn} & K_{2,mn}^{e}+M_{d,mn}
\end{array}\right]\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{n}}\\
{\color{red}\delta C_{n}}
\end{array}\right\}  & +\left[\begin{array}{cc}
0 & 0\\
0 & Y_{mn}^{e}
\end{array}\right]\partial_{t}\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{n}}\\
{\color{red}\delta C_{n}}
\end{array}\right\} \\
+\lambda\left[\begin{array}{cc}
0 & 0\\
0 & b_{3,mn}^{e}
\end{array}\right]\partial_{t}\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{nA}}\\
{\color{red}\delta C_{nA}}
\end{array}\right\}  & =\lambda\left\{ \begin{array}{c}
b_{1,m}^{e}+b_{2,m}^{s}\\
b_{4,m}^{e}+b_{5,m}^{e}+b_{6,m}^{s}+b_{7,m}^{s}
\end{array}\right\} 
\end{align*}

\end_inset

显式写出时间标签
\begin_inset Formula 
\begin{align*}
\left[\begin{array}{cc}
K_{1,mn}^{e}+M_{a,mn} & M_{b,mn}\\
M_{c,mn} & K_{2,mn}^{e}+M_{d,mn}
\end{array}\right]\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{n}^{t+\Delta t}}\\
{\color{red}\delta C_{n}^{t+\Delta t}}
\end{array}\right\}  & +\left[\begin{array}{cc}
0 & 0\\
0 & Y_{mn}^{e}
\end{array}\right]\frac{1}{\Delta t}\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{n}^{t+\Delta t}}\\
{\color{red}\delta C_{n}^{t+\Delta t}}
\end{array}\right\} \\
+\lambda\left[\begin{array}{cc}
0 & 0\\
0 & b_{3,mn}^{e}
\end{array}\right]\frac{1}{\Delta t}\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{nA}^{t+\Delta t}}\\
{\color{red}\delta C_{nA}^{t+\Delta t}}
\end{array}\right\}  & =\lambda\left\{ \begin{array}{c}
b_{1,m}^{e}+b_{2,m}^{s}\\
b_{4,m}^{e}+b_{5,m}^{e}+b_{6,m}^{s}+b_{7,m}^{s}
\end{array}\right\} 
\end{align*}

\end_inset

整理
\begin_inset Formula 
\begin{align*}
 & \left[\begin{array}{cc}
K_{1,mn}^{e}+M_{a,mn} & M_{b,mn}\\
M_{c,mn} & K_{2,mn}^{e}+M_{d,mn}+\frac{1}{\Delta t}Y_{mn}^{e}
\end{array}\right]\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{n}^{t+\Delta t}}\\
{\color{red}\delta C_{n}^{t+\Delta t}}
\end{array}\right\} \\
 & =\lambda\left\{ \begin{array}{c}
b_{1,m}^{e}+b_{2,m}^{s}\\
b_{4,m}^{e}+b_{5,m}^{e}+b_{6,m}^{s}+b_{7,m}^{s}
\end{array}\right\} -\lambda\left[\begin{array}{cc}
0 & 0\\
0 & \frac{1}{\Delta t}b_{3,mn}^{e}
\end{array}\right]\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{nA}^{t+\Delta t}}\\
{\color{red}\delta C_{nA}^{t+\Delta t}}
\end{array}\right\} 
\end{align*}

\end_inset

其中
\begin_inset Formula 
\[
\left\{ \begin{array}{c}
{\color{blue}\delta\phi_{nA}^{t+\Delta t}}\\
{\color{red}\delta C_{nA}^{t+\Delta t}}
\end{array}\right\} =\left\{ \begin{array}{c}
{\color{blue}\phi_{nA}^{t+\Delta t}-\phi_{n}^{t}}\\
{\color{red}C_{nA}^{t+\Delta t}-C_{n}^{t}}
\end{array}\right\} 
\]

\end_inset

