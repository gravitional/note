\begin_layout Standard

\series bold
peskin：
\series default

\begin_inset Formula 
\begin{align*}
\psi\left(x\right) & =\int\frac{\dd^{3}p}{(2\pi)^{3}}\frac{1}{\sqrt{2E_{\vec{p}}}}\sum_{s}a^{s}\left(p\right)u^{s}\left(p\right)\exp\left(-ip\cdot x\right)+b^{s\dagger}\left(p\right)v^{s}\left(p\right)\exp\left(+ip\cdot x\right)
