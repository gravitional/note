\]

\end_inset


\end_layout

\begin_layout Section
厄米共轭公式
\end_layout

\begin_layout Standard
\begin_inset Formula $\gamma^{0\dagger}=\gamma^{0},\gamma^{i\dagger}=-\gamma^{i}$
\end_inset

，所以
\begin_inset Formula 
\begin{align*}
\gamma^{0}\gamma^{\mu}\gamma^{0} & =\gamma^{\mu\dagger}\\
\gamma^{0}\gamma^{\mu\dagger}\gamma^{0} & =\gamma^{\mu}
\end{align*}

\end_inset

此外
\begin_inset Formula 
\begin{align*}
\gamma^{0}\sigma^{\mu\nu}\gamma^{0} & =\gamma^{0}\frac{i}{2}\left(\gamma^{\mu}\gamma^{\nu}-\gamma^{\nu}\gamma^{\mu}\right)\gamma^{0}=\frac{i}{2}\left(\gamma^{0}\gamma^{\mu}\gamma^{0}\gamma^{0}\gamma^{\nu}\gamma^{0}-\gamma^{0}\gamma^{\nu}\gamma^{0}\gamma^{0}\gamma^{\mu}\gamma^{0}\right)\\
 & =\frac{i}{2}\left(\gamma^{\mu\dagger}\gamma^{\nu\dagger}-\gamma^{\nu\dagger}\gamma^{\mu\dagger}\right)=-\frac{i}{2}\left(\gamma^{\nu\dagger}\gamma^{\mu\dagger}-\gamma^{\mu\dagger}\gamma^{\nu\dagger}\right)=\left(\sigma^{\mu\nu}\right)^{\dagger}
\end{align*}

\end_inset

即
\begin_inset Formula 
\[
\gamma^{0}\sigma^{\mu\nu}\gamma^{0}=\left(\sigma^{\mu\nu}\right)^{\dagger},\quad\gamma^{0}\left(\sigma^{\mu\nu}\right)^{\dagger}\gamma^{0}=\sigma^{\mu\nu}
\]

\end_inset


\end_layout

\begin_layout Section
复共轭公式
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\begin{cases}
\left(\gamma^{\mu}\right)^{*}=-\gamma^{\mu} & \text{for}\mu=\{2\}\\
\left(\gamma^{\mu}\right)^{*}=\gamma^{\mu}, & \text{for}\mu=\{0,1,3\}
\end{cases}
\end{align*}

\end_inset

所以有
\begin_inset Formula 
\begin{align*}
\gamma^{2}.\left(\gamma^{\mu}\right)^{*}.\gamma^{2} & =-\gamma^{\mu}\\
\gamma^{2}.\gamma^{\mu}.\gamma^{2} & =-\left(\gamma^{\mu}\right)^{*}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\gamma^{2}\sigma^{\mu\nu}\gamma^{2} & =\gamma^{2}\frac{i}{2}\left(\gamma^{\mu}\gamma^{\nu}-\gamma^{\nu}\gamma^{\mu}\right)\gamma^{2}=\frac{i}{2}\left(\gamma^{2}\gamma^{\mu}\gamma^{2}\gamma^{2}\gamma^{\nu}\gamma^{2}-\gamma^{2}\gamma^{\nu}\gamma^{2}\gamma^{2}\gamma^{\mu}\gamma^{2}\right)\\
 & =-\frac{i}{2}\left(\gamma^{\mu*}\gamma^{\nu*}-\gamma^{\nu*}\gamma^{\mu*}\right)=\left(\sigma^{\mu\nu}\right)^{*}
\end{align*}

\end_inset

即
\begin_inset Formula 
\[
\gamma^{2}\sigma^{\mu\nu}\gamma^{2}=\left(\sigma^{\mu\nu}\right)^{*},\quad\gamma^{2}\left(\sigma^{\mu\nu}\right)^{*}\gamma^{2}=\sigma^{\mu\nu}
\]

\end_inset


\end_layout

